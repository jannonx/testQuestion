<?xml version="1.0" encoding="utf-8"?>


                                                   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/activity_exam_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <include
            android:id="@+id/ll_home_bar"
            layout="@layout/layout_home_bar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_home_bar"
            android:layout_margin="@dimen/dp_12"
            android:padding="6dp"
            android:text="选择题选择题选择题选择题选择题选择题选择题选择题选择题选择题选择题选择题"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />


        <RadioGroup
            android:id="@+id/rg_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_question"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="@dimen/dp_12"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rb_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:checked="true"
                android:drawableStart="@drawable/bg_work_project_rb_unselector"
                android:drawablePadding="@dimen/dp_8"
                android:text="rb_a"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rb_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:drawableStart="@drawable/bg_work_project_rb_unselector"
                android:drawablePadding="@dimen/dp_8"
                android:text="rb_b"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rb_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_44"
                android:background="@null"
                android:button="@null"
                android:checked="true"
                android:drawableStart="@drawable/bg_work_project_rb_unselector"
                android:drawablePadding="@dimen/dp_8"
                android:text="rb_c"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rb_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:drawableStart="@drawable/bg_work_project_rb_unselector"
                android:drawablePadding="@dimen/dp_8"
                android:text="rb_d"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14" />
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_parse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rg_select"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_18"
            android:text="答案解析"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_previous"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:padding="6dp"
                android:text="上一题"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/green"
                android:gravity="center"
                android:padding="6dp"
                android:text="下一题"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
         