<?xml version="1.0" encoding="utf-8"?>


                                                        

    

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/activity_base_no_tab_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBFBFF"
            app:elevation="0dp" android:tag="binding_1">

            <include
                android:id="@+id/layout_toolbar"
                layout="@layout/toolbar" />

        </com.google.android.material.appbar.AppBarLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_4"
            android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
            android:indeterminateOnly="false"
            android:progress="50"
            android:progressDrawable="@drawable/bg_tab_progress" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/base_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
         