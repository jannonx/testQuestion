<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_window"
    android:orientation="vertical"
    tools:background="@color/green">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/bg_white_corner_4"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_12">


        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:text="迪尔空分机项目"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_project_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:background="@drawable/bg_orange_ffece3_corner_2"
            android:paddingStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_2"
            android:text="满足条件"
            android:textColor="@color/color_orange_FF6010"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/tv_project_name"
            app:layout_constraintStart_toEndOf="@+id/tv_project_name"
            app:layout_constraintTop_toTopOf="@+id/tv_project_name" />

        <TextView
            android:id="@+id/label_project_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:text="项目编号："
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_project_name" />

        <TextView
            android:id="@+id/tv_project_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="XMBH6546487"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/label_project_code"
            app:layout_constraintStart_toEndOf="@+id/label_project_code"
            app:layout_constraintTop_toTopOf="@+id/label_project_code" />

        <TextView
            android:id="@+id/label_project_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="项目名称："
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="@+id/tv_project_name"
            app:layout_constraintTop_toBottomOf="@+id/label_project_code" />

        <TextView
            android:id="@+id/tv_project_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="深圳固原"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/label_project_number"
            app:layout_constraintStart_toEndOf="@+id/label_project_number"
            app:layout_constraintTop_toTopOf="@+id/label_project_number" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_project_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tv_project_name"
            app:layout_constraintTop_toBottomOf="@+id/label_project_number"
            tools:visibility="visible">

            <TextView
                android:id="@+id/label_project_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址："
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_14"

                />

            <TextView
                android:id="@+id/tv_project_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="广东省深圳市南山区"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_14" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_middle_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_project_name"
            app:layout_constraintTop_toBottomOf="@+id/ll_project_location">

            <View
                android:id="@+id/v_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/color_grey_e5e5e5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />




            <TextView
                android:id="@+id/label_operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="记录人员："
                android:textColor="@color/color_blue_1890ff"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_line"


                />

            <TextView
                android:id="@+id/tv_operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="小江"
                android:textColor="@color/color_blue_1890ff"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="@+id/label_operator"
                app:layout_constraintStart_toEndOf="@+id/label_operator"
                app:layout_constraintTop_toTopOf="@+id/label_operator" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_12"
                android:text="2020-08-17 15:00"
                android:textColor="@color/color_blue_1890ff"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="@+id/label_operator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/label_operator" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>