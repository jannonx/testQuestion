<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/control_maintain_device_iv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/control_maintain_device_name_tv"
                    style="@style/card_text_title"
                    android:layout_width="80dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    tools:text="激光切割机" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/card_text_title"
                        android:text="设备编号" />

                    <TextView
                        android:id="@+id/control_maintain_code_tv"
                        style="@style/card_text_title_content"
                        tools:text="SB006" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        style="@style/card_text_title"
                        android:text="所属工厂" />

                    <TextView
                        android:id="@+id/control_maintain_factory_tv"
                        style="@style/card_text_title_content"
                        tools:text="固远喷涂机器人厂" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        style="@style/card_text_title"
                        android:text="所属车间" />

                    <TextView
                        android:id="@+id/control_maintain_workShop_tv"
                        style="@style/card_text_title_content"
                        tools:text="喷涂机器人厂底盘制造车间" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        style="@style/card_text_title"
                        android:text="保&#8194;养&#8194;人" />

                    <TextView
                        android:id="@+id/control_maintain_person"
                        style="@style/card_text_title_content"
                        tools:text="张三" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        style="@style/card_text_title"
                        android:text="保养类型" />

                    <TextView
                        android:id="@+id/control_maintain_type"
                        style="@style/card_text_title_content"
                        tools:text="除尘" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        style="@style/card_text_title"
                        android:text="保养内容" />

                    <TextView
                        android:id="@+id/control_maintain_content"
                        style="@style/card_text_title_content"
                        tools:text="除尘" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        style="@style/card_text_title"
                        android:text="保养时间" />

                    <TextView
                        android:id="@+id/control_maintain_time"
                        style="@style/card_text_title_content"
                        tools:text="2019-12-12" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>