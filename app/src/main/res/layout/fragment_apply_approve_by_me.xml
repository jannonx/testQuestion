<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_window"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            <include layout="@layout/toolbar" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white_ffffff"
                android:gravity="center_vertical"
                android:padding="12dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_user_avatar"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_svg_staff_icon_default" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_user_name"
                        style="@style/card_text_title"
                        android:textStyle="bold"
                        tools:text="23123123" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_dept_name"
                        style="@style/card_text_title_content_new"
                        android:layout_marginTop="3.5dp"
                        tools:text="31231231231" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_approve_status"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_svg_pending_for_approval" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/card_text_title_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="3.5dp"
                        android:text="等待审批" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/bg_white_corner_4"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_apply_name"
                        style="@style/card_text_title"
                        android:textStyle="bold"
                        tools:text="xxx的请假" />

                    <TextView
                        android:id="@+id/tv_apply_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:background="@color/color_blue_E7F1FF"
                        android:paddingLeft="4dp"
                        android:paddingTop="1.5dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="1.5dp"
                        android:textColor="@color/color_blue_1677ff"
                        android:visibility="gone"
                        tools:text="事假"
                        tools:visibility="visible" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/bg_window" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/card_text_title"
                        android:text="开始时间" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_start_time"
                        style="@style/card_text_title_content"
                        android:layout_marginStart="20dp"
                        tools:text="2019-12-12" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/card_text_title"
                        android:text="结束时间" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_end_time"
                        style="@style/card_text_title_content"
                        android:layout_marginStart="20dp"
                        tools:text="2019-12-12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/card_text_title"
                        android:text="时&#12288;&#12288;长" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_approve_duration"
                        style="@style/card_text_title_content"
                        android:layout_marginStart="20dp"
                        tools:text="2019-12-12" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/card_text_title"
                        android:text="原&#12288;&#12288;因" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_remarks"
                        style="@style/card_text_title_content"
                        android:layout_marginStart="20dp"
                        tools:text="2019-12-12" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                style="@style/card_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="审批意见"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_comment"
                style="@style/edit_text_style"
                android:layout_margin="12dp"
                android:hint="请输入审批意见"
                android:maxLength="30" />

        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white_ffffff"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv_btn_reject"
            style="@style/commit_btn"
            android:layout_width="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_round"
            android:text="拒绝"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/tv_btn_pass"
            style="@style/commit_btn"
            android:layout_width="0dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:text="同意" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>

</layout>