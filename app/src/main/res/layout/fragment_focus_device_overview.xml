<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="number"
            type="com.guyuan.dear.focus.device.data.beans.DeviceNumberBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_window"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/total_number_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="设备总数"
                        android:textColor="#464646"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/device_total_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@{String.valueOf(number.getEquipmentSum)}"
                        android:textColor="#0050B4"
                        android:textSize="25sp"
                        tools:text="6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="台"
                        android:textColor="#0050B4"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="13dp">

                        <LinearLayout
                            android:id="@+id/total_open_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                android:src="@mipmap/device_open" />

                            <TextView
                                style="@style/card_text_title"
                                android:layout_width="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:text="开机设备" />

                            <TextView
                                android:id="@+id/device_open_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@{String.valueOf(number.getOpen())}"
                                android:textColor="#0050B4"
                                android:textSize="21sp"
                                tools:text="2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="台"
                                android:textColor="#0050B4"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/total_stop_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                android:src="@mipmap/device_close" />

                            <TextView
                                style="@style/card_text_title"
                                android:layout_width="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:text="停机设备" />

                            <TextView
                                android:id="@+id/device_close_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@{String.valueOf(number.getClose())}"
                                android:textColor="#0050B4"
                                android:textSize="21sp"
                                tools:text="100" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="台"
                                android:textColor="#0050B4"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/total_maintain_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                android:src="@mipmap/device_maintain1" />

                            <TextView
                                style="@style/card_text_title"
                                android:layout_width="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:text="保养设备" />

                            <TextView
                                android:id="@+id/device_maintain_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@{String.valueOf(number.getMaintance())}"
                                android:textColor="#0050B4"
                                android:textSize="21sp"
                                tools:text="20" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="台"
                                android:textColor="#0050B4"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:paddingLeft="13dp">

                        <LinearLayout
                            android:id="@+id/total_repair_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                android:src="@mipmap/device_repair" />

                            <TextView
                                style="@style/card_text_title"
                                android:layout_width="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:text="维修设备" />

                            <TextView
                                android:id="@+id/device_repair_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@{String.valueOf(number.getRepair())}"
                                android:textColor="#0050B4"
                                android:textSize="21sp"
                                tools:text="20" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="台"
                                android:textColor="#0050B4"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/total_exception_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                android:src="@mipmap/device_exception" />

                            <TextView
                                style="@style/card_text_title"
                                android:layout_width="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:text="故障设备" />

                            <TextView
                                android:id="@+id/device_fault_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@{String.valueOf(number.getFault())}"
                                android:textColor="#0050B4"
                                android:textSize="21sp"
                                tools:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="台"
                                android:textColor="#0050B4"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <tl.com.easy_recycleview_library.BaseRecyclerView
            android:id="@+id/base_recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/empty_view"
            layout="@layout/empty"
            android:visibility="gone" />

    </LinearLayout>
</layout>
