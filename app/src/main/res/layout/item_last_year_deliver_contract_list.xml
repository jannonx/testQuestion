<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.guyuan.dear.focus.contract.bean.BaseContractBean" />
        <variable
            name="onClickShowDetail"
            type="android.view.View.OnClickListener"/>
        <variable
            name="onClickShowExecutionStatus"
            type="android.view.View.OnClickListener"/>
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_corner_4"
        android:orientation="vertical"
        android:padding="@dimen/dp_12">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:shrinkColumns="1"
            android:stretchColumns="3">

            <TableRow android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同编号："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_contract_list_tv_contact_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.contractNum}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="验收合格"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:setContractSearchListRightTag="@{data.executingState}" />
                <Space/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:onClick="@{onClickShowDetail}"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_svg_right_arrow"/>
            </TableRow>
        </TableLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户名称："
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_contract_list_tv_buyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.buyer}"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售人员："
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_12" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_contract_list_tv_sales_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.salesPerson}"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_12" />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签订时间："
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_12" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_12"
                app:setContractDate="@{data.date}"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <FrameLayout
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:onClick="@{onClickShowExecutionStatus}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textSize="@dimen/sp_12"
                android:textColor="#1677FF"
                android:background="@drawable/shape_stroke_blue_1677ff_solid_transparent"
                android:text="查看合同执行状态"/>
        </FrameLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>