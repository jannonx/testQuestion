<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="ComContractsBinding">

        <import
            alias="vm"
            type="com.guyuan.dear.focus.contract.view.contractSum.ComContractsSumViewModel" />

        <variable
            name="fragment_contact_summary_vm"
            type="vm" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_search_bar" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:padding="@dimen/dp_10"
                    android:text="日期"
                    android:textStyle="bold"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_16" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="77dp"
                    android:layout_height="24.5dp"
                    android:background="@drawable/bg_white_ffffff_corner_12dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_12">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_black_333333"
                        android:text="2020"
                        app:setContractsYear="@{fragment_contact_summary_vm.selectDate}"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_10"
                        app:srcCompat="@drawable/ic_svg_arrow_grey_down"
                        android:onClick="@{fragment_contact_summary_vm.onClickSelectDate}"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_white_corner_4"
                android:layout_margin="@dimen/dp_12">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_10">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="客户总数"
                        android:textStyle="bold"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_17" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_12"
                        android:text="@{String.valueOf(fragment_contact_summary_vm.comContractSum.clientTotal),default=xxx}"
                        android:textColor="#0050B4"
                        android:textSize="@dimen/sp_15" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_10">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="合同总数"
                        android:textStyle="bold"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_17" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_12"
                        android:text="@{String.valueOf(fragment_contact_summary_vm.comContractSum.contractsTotal),default=xxx}"
                        android:textColor="#0050B4"
                        android:textSize="@dimen/sp_15" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_12"
                        android:onClick="@{fragment_contact_summary_vm.onClickShowPreAnnualDelivers}">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_svg_last_year_deliver"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:paddingLeft="@dimen/dp_6"
                            android:paddingRight="@dimen/dp_6"
                            android:textColor="@color/color_black_333333"
                            android:textStyle="bold"
                            android:text="上年交付"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLines="10"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_grey_999999"
                            android:gravity="end"
                            android:text="@{String.valueOf(fragment_contact_summary_vm.comContractSum.preAnnualDelivers)}"
                            android:layout_marginEnd="@dimen/dp_6"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            app:srcCompat="@drawable/ic_svg_right_arrow"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <Space
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_12"
                        android:onClick="@{fragment_contact_summary_vm.onClickShowNewContracts}">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_svg_new_contract_this_year"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:paddingLeft="@dimen/dp_6"
                            android:paddingRight="@dimen/dp_6"
                            android:textColor="@color/color_black_333333"
                            android:textStyle="bold"
                            android:text="今年新签"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLines="10"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_grey_999999"
                            android:gravity="end"
                            android:text="@{String.valueOf(fragment_contact_summary_vm.comContractSum.newContracts)}"
                            android:layout_marginEnd="@dimen/dp_6"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            app:srcCompat="@drawable/ic_svg_right_arrow"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_12"
                        android:onClick="@{fragment_contact_summary_vm.onClickShowFinished}">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_svg_finished_contract"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:paddingLeft="@dimen/dp_6"
                            android:paddingRight="@dimen/dp_6"
                            android:textColor="@color/color_black_333333"
                            android:textStyle="bold"
                            android:text="已经完成"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLines="10"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_grey_999999"
                            android:gravity="end"
                            android:text="@{String.valueOf(fragment_contact_summary_vm.comContractSum.finishedContracts)}"
                            android:layout_marginEnd="@dimen/dp_6"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            app:srcCompat="@drawable/ic_svg_right_arrow"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <Space
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_12"
                        android:onClick="@{fragment_contact_summary_vm.onClickShowExecuting}">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_svg_executing_contract"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:paddingLeft="@dimen/dp_6"
                            android:paddingRight="@dimen/dp_6"
                            android:textColor="@color/color_black_333333"
                            android:textStyle="bold"
                            android:text="正在进行"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLines="10"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_grey_999999"
                            android:gravity="end"
                            android:text="@{String.valueOf(fragment_contact_summary_vm.comContractSum.executingContracts)}"
                            android:layout_marginEnd="@dimen/dp_6"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            app:srcCompat="@drawable/ic_svg_right_arrow"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_12"
                        android:onClick="@{fragment_contact_summary_vm.onClickShowExceptions}">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_svg_exception_contracts"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:paddingLeft="@dimen/dp_6"
                            android:paddingRight="@dimen/dp_6"
                            android:textColor="@color/color_black_333333"
                            android:textStyle="bold"
                            android:text="执行异常"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLines="10"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_grey_999999"
                            android:gravity="end"
                            android:text="@{String.valueOf(fragment_contact_summary_vm.comContractSum.exceptionContracts)}"
                            android:layout_marginEnd="@dimen/dp_6"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            app:srcCompat="@drawable/ic_svg_right_arrow"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <Space
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_12"
                        android:visibility="invisible">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_svg_new_contract_this_year"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:paddingLeft="@dimen/dp_6"
                            android:paddingRight="@dimen/dp_6"
                            android:textColor="@color/color_black_333333"
                            android:textStyle="bold"
                            android:text="今年新签"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:maxLines="10"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_grey_999999"
                            android:gravity="end"
                            android:text="100"
                            android:layout_marginEnd="@dimen/dp_6"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            app:srcCompat="@drawable/ic_svg_right_arrow"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <com.guyuan.dear.customizeview.PieChartView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="@dimen/sp_10"
                app:setContractSumPieData="@{fragment_contact_summary_vm.comContractSum}"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</layout>