<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="fragment_qc_search_list_vm"
            type="com.guyuan.dear.focus.qc.views.qcSearchList.QcSearchListViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <tl.com.easy_recycleview_library.BaseRecyclerView
            android:id="@+id/fragment_qc_search_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include layout="@layout/layout_no_data"
            android:visibility="@{fragment_qc_search_list_vm.shouldShowNoData?View.VISIBLE:View.GONE}"/>

    </FrameLayout>
</layout>