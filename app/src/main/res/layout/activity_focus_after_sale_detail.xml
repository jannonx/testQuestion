<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <include
                android:id="@+id/toolbar_container"
                layout="@layout/toolbar" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/sale_detail_title_tv"
                    style="@style/TextBigBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="深圳固远" />

                <TextView
                    android:id="@+id/sale_detail_status_tv"
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    tools:text="深圳固远" />
            </LinearLayout>

            <View
                style="@style/DivideLine"
                android:layout_marginTop="@dimen/dp_12" />

            <TextView
                android:id="@+id/sale_detail_project_name_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="@string/focus_after_sale_project_name" />

            <TextView
                android:id="@+id/sale_detail_customer_name_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#999999"
                tools:text="@string/focus_after_sale_customer_name" />

            <TextView
                android:id="@+id/sale_detail_address_name_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#999999"
                tools:text="@string/focus_after_sale_address" />

            <View
                style="@style/DivideLine"
                android:layout_marginTop="@dimen/dp_12" />

            <TextView
                android:id="@+id/sale_detail_person_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                tools:text="@string/focus_after_sale_person" />

            <TextView
                android:id="@+id/sale_detail_time_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#999999"
                tools:text="2020-11-21" />

        </LinearLayout>

        <View
            style="@style/DivideLine"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/dp_12" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/focus_sale_detail_tl"
            style="@style/tab_blue_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/focus_sale_detail_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

