<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <import type="com.guyuan.dear.office.approval.data.bean.ApprovalTypeBean"/>

        <variable
            name="fragment_approval_detail_vm"
            type="com.guyuan.dear.office.approval.ui.approvalDetail.ApprovalDetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragment_my_pause_apply_detail_nested_scroller_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="none">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:gravity="center_vertical"
                android:shrinkColumns="0">

                <TableRow android:gravity="center_vertical"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{fragment_approval_detail_vm.title,default=xxx提交的xxx申请}"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:paddingLeft="@dimen/dp_4"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_4"
                        android:paddingBottom="@dimen/dp_2"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:setMyApplyDetailTagTextProperty="@{fragment_approval_detail_vm.detailBean.approveResult}" />
                </TableRow>
            </TableLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:visibility="gone"
                app:showYearMonthDayHourMinuteByDate="@{fragment_approval_detail_vm.detailBean.applyDate}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/color_grey_999999"
                android:paddingLeft="@dimen/dp_12"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0p5"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@color/color_grey_e5e5e5" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户名称："
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{fragment_approval_detail_vm.detailBean.buyer}"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_14" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同编号："
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{fragment_approval_detail_vm.detailBean.contractNum}"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_14" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:visibility="@{fragment_approval_detail_vm.applyType==ApprovalTypeBean.CONTRACT_EXAMINE_STATUS_STOP_TYPE?View.VISIBLE:View.GONE}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="判定维度："
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{fragment_approval_detail_vm.detailBean.judgement}"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_14" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <include
                android:visibility="@{fragment_approval_detail_vm.applyType==ApprovalTypeBean.CONTRACT_EXAMINE_STATUS_RESTART_TYPE?View.VISIBLE:View.GONE}"
                layout="@layout/content_contract_pause_reason"
                app:setData="@{fragment_approval_detail_vm.pauseInfo}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/color_grey_e5e5e5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:text="详细原因"
                android:textColor="@color/color_black_333333"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="@{fragment_approval_detail_vm.remark}"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/color_grey_e5e5e5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:text="审批动态"
                android:textColor="@color/color_black_333333"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_12"
                app:setContractExcptDetailApplier="@{fragment_approval_detail_vm.detailBean.applier}"
                app:setContractExcptDetailCommentList="@{fragment_approval_detail_vm.detailBean.comments}"
                app:setContractExcptDetailCreateDate="@{fragment_approval_detail_vm.detailBean.date}" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</layout>