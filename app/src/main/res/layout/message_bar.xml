<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_message_ll"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="@color/gray_light"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toolbar_message_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/message_no_data_tip"
            android:textColor="#454545"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/toolbar_message_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="#454545"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="2321312312312"
            tools:visibility="visible" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/toolbar_message_iv"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="30dp"
            app:srcCompat="@mipmap/ic_message_notice" />

        <TextView
            android:id="@+id/unread_dot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="22dp"
            android:background="@drawable/bg_red_dot"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:text="9"
            tools:visibility="visible" />
    </FrameLayout>
</LinearLayout>