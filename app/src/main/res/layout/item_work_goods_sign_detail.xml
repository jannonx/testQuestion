<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="goodsSignBean"
            type="com.guyuan.dear.work.goodssign.data.bean.GoodsSignBean" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_12"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_12">

            <TextView
                android:id="@+id/goods_customer_name_tv"
                style="@style/TextBigBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="@{goodsSignBean.name}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="深圳固远" />

            <TextView
                android:id="@+id/goods_status_tv"
                style="@style/TextTagOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                app:focusPurchaseStatusWithBackground="@{goodsSignBean.status}"
                app:layout_constraintBottom_toBottomOf="@+id/goods_customer_name_tv"
                app:layout_constraintStart_toEndOf="@+id/goods_customer_name_tv"
                app:layout_constraintTop_toTopOf="@+id/goods_customer_name_tv"
                tools:text="待收货" />

            <TextView
                android:id="@+id/goods_contract_number_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{String.format(@string/focus_purchase_code,goodsSignBean.code)}"
                app:layout_constraintStart_toStartOf="@+id/goods_customer_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/goods_customer_name_tv"
                tools:text="@string/focus_purchase_code" />


            <TextView
                android:id="@+id/sign_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="@{String.format(@string/piece_number,goodsSignBean.number)}"
                app:drawableEndCompat="@mipmap/right_direction"
                app:layout_constraintBottom_toBottomOf="@+id/goods_customer_name_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/goods_customer_name_tv"
                tools:text="3 件" />

            <TextView
                android:id="@+id/receive_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/selector_blue_to_gray"
                android:enabled="false"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="4dp"
                android:paddingRight="@dimen/dp_12"
                android:paddingBottom="4dp"
                android:textColor="@color/white"
                app:goodsReceiveStatus="@{goodsSignBean.receiveStatus}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/goods_contract_number_tv"
                tools:text="已收货" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
