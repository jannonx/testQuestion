<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.guyuan.dear.utils.CommonUtils"/>
        <import type="com.guyuan.dear.utils.ConstantValue"/>
        <variable
            name="goodsSignBean"
            type="com.guyuan.dear.work.goodssign.data.bean.GoodsSignBean" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_12"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_12">

            <LinearLayout
                android:id="@+id/goods_customer_name_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/goods_customer_name_tv"
                    style="@style/TextBigBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@{goodsSignBean.name}"
                    tools:text="深圳固远" />

                <TextView
                    android:id="@+id/goods_status_tv"
                    style="@style/TextTagOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="@dimen/dp_12"
                    app:focusPurchaseStatusWithBackground="@{goodsSignBean.status}"
                    tools:text="待收货" />

                <TextView
                    android:id="@+id/sign_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="@{String.format(@string/piece_number,goodsSignBean.purchaseNum)}"
                    app:drawableEndCompat="@mipmap/right_direction"
                    tools:text="3 件" />

            </LinearLayout>


            <TextView
                android:id="@+id/receive_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/selector_blue_to_gray"
                android:enabled="false"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="4dp"
                android:paddingRight="@dimen/dp_12"
                android:paddingBottom="4dp"
                android:textColor="@color/white"
                android:visibility="@{CommonUtils.isShowButton(ConstantValue.GOODS_SIGN_RECEIVE)?View.VISIBLE:View.INVISIBLE,default=invisible}"
                app:goodsReceiveStatus="@{goodsSignBean.receiveStatus}"
                app:layout_constraintBottom_toBottomOf="@+id/goods_contract_number_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/goods_contract_number_tv"
                tools:text="已收货" />

            <TextView
                android:id="@+id/goods_contract_number_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="@{String.format(@string/focus_purchase_code,goodsSignBean.code)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goods_customer_name_ll"
                tools:text="@string/focus_purchase_code" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
