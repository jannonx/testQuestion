<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.guyuan.dear.focus.contract.bean.ContractComment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_contract_comment_iv_avatar"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_svg_staff_icon_default"
            setUserCircleNetImage="@{data.imgUrl}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_contract_comment_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/item_contract_comment_iv_avatar"
            app:layout_constraintTop_toTopOf="@id/item_contract_comment_iv_avatar"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_6"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_12"
            android:text="@{data.commenter,default=xxx}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_contract_comment_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/item_contract_comment_tv_name"
            app:layout_constraintBottom_toBottomOf="@id/item_contract_comment_tv_name"
            app:layout_constraintRight_toRightOf="parent"
            android:text="2020-10-0 17:50"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_grey_999999"
            app:setContractDate="@{data.date}"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_contract_comment_tv_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/item_contract_comment_tv_date"
            app:layout_constraintLeft_toLeftOf="@id/item_contract_comment_tv_name"
            app:layout_constraintTop_toBottomOf="@id/item_contract_comment_tv_name"
            android:textColor="@color/color_black_333333"
            android:layout_marginTop="@dimen/dp_8"
            android:textSize="@dimen/sp_12"
            android:text="@{data.content,default=xxxxxx}"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_contract_comment_tv_dept"
            app:layout_constraintLeft_toLeftOf="@id/item_contract_comment_tv_comment"
            app:layout_constraintTop_toBottomOf="@id/item_contract_comment_tv_comment"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/color_black_333333"
            android:text="@{data.commenterDept,default=xxxxxx}"
            android:layout_marginBottom="@dimen/dp_12"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>