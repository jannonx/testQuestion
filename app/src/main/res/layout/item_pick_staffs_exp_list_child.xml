<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.guyuan.dear.focus.hr.bean.PickStaffBean" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_12">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            app:srcCompat="@drawable/ic_svg_staff_icon_default" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_12"
            android:text="@{data.name}"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_17" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/item_pick_staffs_exp_list_child_cbx_select_staff"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:button="@drawable/selector_ic_svg_unchecked_to_checked"
            android:checked="@{data.pick}"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>