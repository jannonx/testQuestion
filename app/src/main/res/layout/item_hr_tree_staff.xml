<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.guyuan.dear.focus.hr.bean.StaffWorkStatusInfo"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_hr_tree_staff_iv_avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_margin="@dimen/dp_12"
            app:srcCompat="@drawable/ic_svg_staff_icon_default"
            app:setUserCircleNetImage="@{data.imgUrl}"/>

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintLeft_toRightOf="@id/item_hr_tree_staff_iv_avatar"
            android:id="@+id/item_hr_tree_staff_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_12"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/color_black_333333"
            app:layout_constraintBottom_toTopOf="@id/item_hr_tree_staff_tv_dept"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="@{data.name}"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_hr_tree_staff_tv_dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/item_hr_tree_staff_tv_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/item_hr_tree_staff_tv_name"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/sp_15"
            app:hrTreeShowStaffDept="@{data}"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_hr_tree_staff_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/sp_14"
            android:layout_margin="@dimen/dp_12"
            android:text="正常"
            app:hrTreeShowStaffStatusTxt="@{data.currentStatus}"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/item_hr_tree_staff_tv_status"
            android:layout_marginRight="@dimen/dp_4"
            app:hrTreeShowStaffStatusColor="@{data.currentStatus}"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>