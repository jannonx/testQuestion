<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_search_bar" />

        <include layout="@layout/layout_date_select" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@drawable/bg_white_corner_4"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_10">


                    <TextView
                        android:id="@+id/label_plan_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:text="计划总数"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_17"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_plan_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="50"
                        android:textColor="@color/color_blue_0050b4"
                        android:textSize="@dimen/sp_15"
                        app:layout_constraintBottom_toBottomOf="@+id/label_plan_total"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/label_plan_total" />

                    <!--      订单总数-->
                    <TextView
                        android:id="@+id/label_complete_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_24"
                        android:text="完成率"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_17"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/label_plan_total" />

                    <TextView
                        android:id="@+id/tv_complete_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="73%"
                        android:textColor="@color/color_blue_0050b4"
                        android:textSize="@dimen/sp_15"
                        app:layout_constraintBottom_toBottomOf="@+id/label_complete_rate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/label_complete_rate" />


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guide_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <!--        上年结转-->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_produce_wait"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_14"
                        android:paddingTop="@dimen/dp_11"
                        android:paddingBottom="@dimen/dp_10"
                        app:layout_constraintEnd_toEndOf="@+id/guide_line"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/label_complete_rate">

                        <ImageView
                            android:id="@+id/iv_produce_wait"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@mipmap/ic_produce_wait" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_6"
                            android:text="待生产"
                            android:textColor="@color/color_black_333333"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_wait"
                            app:layout_constraintStart_toEndOf="@+id/iv_produce_wait"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_wait" />

                        <TextView
                            android:id="@+id/tv_produce_wait"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/dp_6"
                            android:text="357"
                            android:textColor="@color/color_grey_999999"
                            android:textSize="@dimen/sp_15"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_wait"
                            app:layout_constraintEnd_toStartOf="@+id/iv_produce_wait_next"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_wait" />

                        <ImageView
                            android:id="@+id/iv_produce_wait_next"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:layout_marginEnd="@dimen/dp_12"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_wait"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_wait"
                            app:srcCompat="@drawable/ic_arrow_right_gray" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <!--      今年新签-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_produce_complete"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/cl_produce_wait"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guide_line"
                        app:layout_constraintTop_toTopOf="@+id/cl_produce_wait">

                        <ImageView
                            android:id="@+id/iv_produce_complete"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginStart="@dimen/dp_12"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@mipmap/ic_produce_complete" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_6"
                            android:text="生产完成"
                            android:textColor="@color/color_black_333333"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_complete"
                            app:layout_constraintStart_toEndOf="@+id/iv_produce_complete"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_complete" />

                        <TextView
                            android:id="@+id/tv_produce_complete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_6"
                            tools:text="3"
                            android:textColor="@color/color_grey_999999"
                            android:textSize="@dimen/sp_15"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_complete"
                            app:layout_constraintEnd_toStartOf="@+id/iv_produce_complete_next"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_complete" />

                        <ImageView
                            android:id="@+id/iv_produce_complete_next"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_complete"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_complete"
                            app:srcCompat="@drawable/ic_arrow_right_gray" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!--        准备投放-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_produce_ing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_11"
                        android:paddingBottom="@dimen/dp_10"
                        app:layout_constraintEnd_toEndOf="@+id/guide_line"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toBottomOf="@+id/cl_produce_wait">

                        <ImageView
                            android:id="@+id/iv_produce_ing"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@mipmap/ic_produce_ing" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_6"
                            android:text="生产中"
                            android:textColor="@color/color_black_333333"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_ing"
                            app:layout_constraintStart_toEndOf="@+id/iv_produce_ing"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_ing" />

                        <TextView
                            android:id="@+id/tv_produce_ing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/dp_6"
                            tools:text="357"
                            android:textColor="@color/color_grey_999999"
                            android:textSize="@dimen/sp_15"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_ing"
                            app:layout_constraintEnd_toStartOf="@+id/iv_produce_ing_next"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_ing" />

                        <ImageView
                            android:id="@+id/iv_produce_ing_next"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:layout_marginEnd="@dimen/dp_12"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_ing"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_ing"
                            app:srcCompat="@drawable/ic_arrow_right_gray" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--      已经完成-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_produce_exception"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/cl_produce_ing"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guide_line"
                        app:layout_constraintTop_toTopOf="@+id/cl_produce_ing"


                        >

                        <ImageView
                            android:id="@+id/iv_produce_exception"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginStart="@dimen/dp_12"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@mipmap/ic_produce_exception" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_6"
                            android:text="生产异常"
                            android:textColor="@color/color_black_333333"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_exception"
                            app:layout_constraintStart_toEndOf="@+id/iv_produce_exception"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_exception" />

                        <TextView
                            android:id="@+id/tv_produce_exception"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/dp_6"
                            tools:text="3"
                            android:textColor="@color/color_grey_999999"
                            android:textSize="@dimen/sp_15"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_exception"
                            app:layout_constraintEnd_toStartOf="@+id/iv_produce_exception_next"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_exception" />

                        <ImageView
                            android:id="@+id/iv_produce_exception_next"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_exception"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_exception"
                            app:srcCompat="@drawable/ic_arrow_right_gray" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--        正在执行-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_produce_delay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_11"
                        android:paddingBottom="@dimen/dp_10"
                        app:layout_constraintEnd_toEndOf="@+id/guide_line"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toBottomOf="@+id/cl_produce_ing">

                        <ImageView
                            android:id="@+id/iv_produce_delay"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@mipmap/ic_produce_delay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_6"
                            android:text="生产拖期"
                            android:textColor="@color/color_black_333333"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_delay"
                            app:layout_constraintStart_toEndOf="@+id/iv_produce_delay"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_delay" />

                        <TextView
                            android:id="@+id/tv_produce_delay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/dp_6"
                            tools:text="20"
                            android:textColor="@color/color_grey_999999"
                            android:textSize="@dimen/sp_15"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_produce_delay"
                            app:layout_constraintEnd_toStartOf="@+id/iv_produce_delay_next"
                            app:layout_constraintTop_toTopOf="@+id/iv_produce_delay" />

                        <ImageView
                            android:id="@+id/iv_produce_delay_next"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:layout_marginEnd="@dimen/dp_12"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_produce_delay"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_produce_delay"
                            app:srcCompat="@drawable/ic_arrow_right_gray" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:background="@drawable/bg_white_corner_4"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/v_yellow"
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_8"
                            android:layout_marginStart="@dimen/dp_11"
                            android:layout_marginTop="@dimen/dp_16"
                            android:background="@drawable/bg_yellow_fa8c16"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_4"
                            android:text="待生产"
                            android:textColor="@color/color_grey_8c8c8c"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintBottom_toBottomOf="@+id/v_yellow"
                            app:layout_constraintStart_toEndOf="@+id/v_yellow"
                            app:layout_constraintTop_toTopOf="@+id/v_yellow" />

                        <View
                            android:id="@+id/v_green"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="@dimen/dp_16"
                            android:background="@drawable/bg_green_2fc25b_round"
                            app:layout_constraintBottom_toBottomOf="@+id/v_yellow"
                            app:layout_constraintStart_toEndOf="@+id/tv_yellow"
                            app:layout_constraintTop_toTopOf="@+id/v_yellow" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_4"
                            android:text="生产完成"
                            android:textColor="@color/color_grey_8c8c8c"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintBottom_toBottomOf="@+id/v_yellow"
                            app:layout_constraintStart_toEndOf="@+id/v_green"
                            app:layout_constraintTop_toTopOf="@+id/v_yellow" />

                        <View
                            android:id="@+id/v_blue"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="@dimen/dp_16"
                            android:background="@drawable/bg_blue_1890ff_round"
                            app:layout_constraintBottom_toBottomOf="@+id/v_yellow"
                            app:layout_constraintStart_toEndOf="@+id/tv_green"
                            app:layout_constraintTop_toTopOf="@+id/v_yellow" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_4"
                            android:text="生产中"
                            android:textColor="@color/color_grey_8c8c8c"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintBottom_toBottomOf="@+id/v_yellow"
                            app:layout_constraintStart_toEndOf="@+id/v_blue"
                            app:layout_constraintTop_toTopOf="@+id/v_yellow" />

                        <View
                            android:id="@+id/v_red"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="@dimen/dp_16"
                            android:background="@drawable/bg_red_f04864_round"
                            app:layout_constraintBottom_toBottomOf="@+id/v_yellow"
                            app:layout_constraintStart_toEndOf="@+id/tv_blue"
                            app:layout_constraintTop_toTopOf="@+id/v_yellow" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_4"
                            android:text="生产异常"
                            android:textColor="@color/color_grey_8c8c8c"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintBottom_toBottomOf="@+id/v_yellow"
                            app:layout_constraintStart_toEndOf="@+id/v_red"
                            app:layout_constraintTop_toTopOf="@+id/v_yellow" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.guyuan.dear.customizeview.PieChartView
                        android:id="@+id/chart_view"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="@dimen/dp_10" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>

