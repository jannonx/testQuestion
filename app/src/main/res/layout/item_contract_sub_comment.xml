<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_contract_sub_comment_iv_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_svg_staff_icon_default"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_contract_sub_comment_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_contract_sub_comment_iv_avatar"
        app:layout_constraintTop_toTopOf="@id/item_contract_sub_comment_iv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/item_contract_sub_comment_iv_avatar"
        android:layout_margin="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_19"
        android:text="Leo"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_contract_sub_comment_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_contract_sub_comment_tv_name"
        app:layout_constraintBottom_toBottomOf="@id/item_contract_sub_comment_tv_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/dp_10"
        android:text="2020-10-0 17:50"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_contract_sub_comment_tv_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/item_contract_sub_comment_tv_date"
        app:layout_constraintLeft_toLeftOf="@id/item_contract_sub_comment_tv_name"
        app:layout_constraintTop_toBottomOf="@id/item_contract_sub_comment_tv_name"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_contract_sub_comment_tv_dept"
        app:layout_constraintLeft_toLeftOf="@id/item_contract_sub_comment_tv_comment"
        app:layout_constraintTop_toBottomOf="@id/item_contract_sub_comment_tv_comment"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来自部门：销售部门"/>


    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="@id/item_contract_sub_comment_iv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/item_contract_sub_comment_iv_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_contract_sub_comment_iv_avatar"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/item_contract_sub_comment_tv_name"
        app:layout_constraintRight_toRightOf="@id/item_contract_sub_comment_tv_date"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>