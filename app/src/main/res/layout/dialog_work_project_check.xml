<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_16p5"
        android:background="@drawable/bg_white_corner_top_8"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"

        android:windowSoftInputMode="adjustPan">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_horizontal"
            android:text="记录问题"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:minHeight="@dimen/dp_120"
            android:background="@drawable/bg_stroke_gray_eeeeee_rectangle"
            android:orientation="vertical"
            android:padding="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:background="@null"
                android:hint="请输入问题能容"
                android:minHeight="@dimen/dp_64"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_17" />


            <TextView
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="end"
                android:text="0/240"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_exception"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12p5"
            android:text="货物异常"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_et_content" />

        <RadioGroup
            android:id="@+id/rg_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_12"
            app:layout_constraintTop_toTopOf="@+id/tv_goods_exception"
            app:layout_constraintBottom_toBottomOf="@+id/tv_goods_exception"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_44"
                android:drawableLeft="@drawable/bg_work_project_rb_selector"
                android:id="@+id/rb_right"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14"
                android:background="@null"
                android:checked="true"
                android:button="@null"
                android:drawableLeft="@drawable/bg_work_project_rb_selector"
                android:text="否"
                android:id="@+id/rb_wrong"/>
        </RadioGroup>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_pick_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_24p5"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@drawable/bg_stroke_gray_eeeeee_rectangle"
            android:orientation="vertical"
            android:padding="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_goods_exception">

            <TextView
                android:id="@+id/label_document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子档文件"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_12"
                android:text="点击图片，放大查看"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_document" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@mipmap/camera_open"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.guyuan.dear.customizeview.flowlayout.TagFlowLayout
            android:id="@+id/tfl_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_pick_tip"
            tools:background="@color/color_green_D4FFF1"
            tools:layout_height="@dimen/dp_100" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16p5"
            android:layout_marginEnd="@dimen/dp_12"

            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tfl_picture">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:layout_marginEnd="@dimen/dp_6"
                android:layout_weight="1"
                android:background="@drawable/bg_stroke_gray_f5f5f5_round"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_weight="1"
                android:background="@drawable/bg_blue_1677ff_round"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>