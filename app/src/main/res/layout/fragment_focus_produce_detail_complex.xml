<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            app:elevation="0dp"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_order_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dp_16"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    tools:text="空气冷却塔"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_produce_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:background="@drawable/bg_orange_ffece3_corner_2"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_2"
                    tools:text="暂停"
                    android:textColor="@color/color_orange_FF6010"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_product_name"
                    app:layout_constraintStart_toEndOf="@+id/tv_product_name"
                    app:layout_constraintTop_toTopOf="@+id/tv_product_name" />

                <View
                    android:id="@+id/v_line_0"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@color/color_grey_e5e5e5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_product_name"

                    />

                <TextView
                    android:id="@+id/label_product_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="产品代号："
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/v_line_0" />

                <TextView
                    android:id="@+id/tv_product_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="CPDH153531"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="@+id/label_product_code"
                    app:layout_constraintStart_toEndOf="@+id/label_product_code"
                    app:layout_constraintTop_toTopOf="@+id/label_product_code" />

                <TextView
                    android:id="@+id/label_duty_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="责任单位："
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_product_code" />

                <TextView
                    android:id="@+id/tv_duty_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="深圳固远空气设备制造二厂"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="@+id/label_duty_unit"
                    app:layout_constraintStart_toEndOf="@+id/label_duty_unit"
                    app:layout_constraintTop_toTopOf="@+id/label_duty_unit" />

                <View
                    android:id="@+id/v_line_1"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@color/color_grey_e5e5e5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/label_duty_unit"

                    />

                <TextView
                    android:id="@+id/tv_project_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="项目名称："
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/v_line_1" />


                <TextView
                    android:id="@+id/label_project_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="项目编号："
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_project_name" />

                <TextView
                    android:id="@+id/tv_project_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="GCSJ468746"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="@+id/label_project_code"
                    app:layout_constraintStart_toEndOf="@+id/label_project_code"
                    app:layout_constraintTop_toTopOf="@+id/label_project_code" />


                <View
                    android:id="@+id/view_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@color/color_grey_EDEDED"
                    app:layout_constraintTop_toBottomOf="@+id/label_project_code" />


                <TextView
                    android:id="@+id/label_actual_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="实际开始生产时间："
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/view_1" />

                <TextView
                    android:id="@+id/tv_actual_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2020-10-10"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="@+id/label_actual_start"
                    app:layout_constraintStart_toEndOf="@+id/label_actual_start"
                    app:layout_constraintTop_toTopOf="@+id/label_actual_start" />

                <TextView
                    android:id="@+id/label_plan_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="计划生产开始时间："
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/label_actual_start" />

                <TextView
                    android:id="@+id/tv_plan_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2020-10-10"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@+id/label_plan_start"
                    app:layout_constraintStart_toEndOf="@+id/label_plan_start"
                    app:layout_constraintTop_toTopOf="@+id/label_plan_start" />

                <View
                    android:id="@+id/v_line_2"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="@color/color_grey_e5e5e5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/label_plan_start"

                    />

                <TextView
                    android:id="@+id/label_actual_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="实际完成生产时间："
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/v_line_2" />

                <TextView
                    android:id="@+id/tv_actual_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2020-10-10"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="@+id/label_actual_complete"
                    app:layout_constraintStart_toEndOf="@+id/label_actual_complete"
                    app:layout_constraintTop_toTopOf="@+id/label_actual_complete" />

                <TextView
                    android:id="@+id/label_plan_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="计划生产完成时间："
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/label_actual_complete" />

                <TextView
                    android:id="@+id/tv_plan_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2020-10-10"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@+id/label_plan_complete"
                    app:layout_constraintStart_toEndOf="@+id/label_plan_complete"
                    app:layout_constraintTop_toTopOf="@+id/label_plan_complete" />

                <View
                    android:id="@+id/view_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@color/color_grey_EDEDED"
                    app:layout_constraintTop_toBottomOf="@+id/label_plan_complete" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    style="@style/TabLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tabIndicatorFullWidth="false"
                    app:tabRippleColor="@android:color/transparent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0p5"
                    android:background="@color/color_grey_eeeeee"
                    app:layout_constraintBottom_toBottomOf="@+id/tab_layout"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:background="@color/color_red_F04864" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <LinearLayout
                android:id="@+id/produce_approval_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/produce_reject_tv"
                    style="@style/btn_style_white_round_corner_black_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="驳回" />

                <TextView
                    android:id="@+id/produce_accept_tv"
                    style="@style/commit_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="通过" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_activate_btn"
                style="@style/commit_btn"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="激活申请"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_apply_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_12"
                android:paddingTop="@dimen/dp_16p5"
                android:paddingEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_16p5"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_pause_btn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:layout_weight="1"
                    android:background="@drawable/bg_stroke_gray_f5f5f5_round"
                    android:gravity="center"
                    android:text="申请暂停"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_complete_btn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue_1677ff_round"
                    android:gravity="center"
                    android:text="完成生产"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </FrameLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>