<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.guyuan.dear.customizeview.SmartControlView
            android:id="@+id/smart_control_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_focus_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="40dp"
            android:drawableRight="@mipmap/ic_focus"
            android:drawablePadding="6dp"
            android:text="@string/default_title_realtime_progress"
            android:textColor="#0661C6"
            android:textSize="15sp"
            android:textStyle="bold" />

        <tl.com.easy_recycleview_library.BaseRecyclerView
            android:id="@+id/base_recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="28dp"
            android:background="@color/white" />


        <include
            android:id="@+id/empty_view"
            layout="@layout/empty"
            android:visibility="gone" />
    </LinearLayout>
</layout>
