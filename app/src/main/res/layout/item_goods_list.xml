<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@color/color_grey_eeeeee"
        android:orientation="vertical"
        android:padding="@dimen/dp_12">


        <TextView
            android:id="@+id/tv_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气冷却塔"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 台"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/tv_good_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_good_name" />

        <TextView
            android:id="@+id/label_goods_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="代号："
            android:textColor="@color/color_grey_757575"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_good_name" />

        <TextView
            android:id="@+id/tv_goods_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DH155457"
            android:textColor="@color/color_grey_757575"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/label_goods_code"
            app:layout_constraintStart_toEndOf="@+id/label_goods_code"
            app:layout_constraintTop_toTopOf="@+id/label_goods_code" />

        <TextView
            android:id="@+id/label_goods_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规格型号："
            android:textColor="@color/color_grey_757575"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/label_goods_code"
            app:layout_constraintEnd_toStartOf="@+id/tv_goods_model"
            app:layout_constraintTop_toTopOf="@+id/label_goods_code"

            />

        <TextView
            android:id="@+id/tv_goods_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120*130"
            android:textColor="@color/color_grey_757575"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/label_goods_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/label_goods_code" />

        <TextView
            android:id="@+id/label_goods_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="备注："
            android:textColor="@color/color_grey_757575"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_goods_code" />

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:textColor="@color/color_grey_757575"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/label_goods_remark"
            app:layout_constraintStart_toEndOf="@+id/label_goods_remark"
            app:layout_constraintTop_toTopOf="@+id/label_goods_remark" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/right"
            app:layout_constraintBottom_toBottomOf="@+id/label_goods_remark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/label_goods_remark" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/rl_confirm"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_0p5"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_right_btn"
            android:layout_width="@dimen/dp_48p5"
            android:layout_height="@dimen/dp_48p5"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/right"
            android:layout_alignParentEnd="true"
          />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_wrong_btn"
            android:layout_width="@dimen/dp_48p5"
            android:layout_height="@dimen/dp_48p5"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/wrong"
            android:layout_marginEnd="@dimen/dp_1p5"
            android:layout_toStartOf="@+id/iv_right_btn"

            />
    </RelativeLayout>

    <View
        android:id="@+id/view_bottom"
        android:layout_width="wrap_content"
        android:background="@color/transparent"
        android:layout_height="@dimen/dp_75"/>

</LinearLayout>