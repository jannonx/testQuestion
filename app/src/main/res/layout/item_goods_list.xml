<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_window"
    android:orientation="vertical"
    tools:background="@color/green">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@color/color_grey_eeeeee"
        android:orientation="vertical"
        android:padding="@dimen/dp_12">


        <TextView
            android:id="@+id/label_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气冷却塔"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 台"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/label_goods_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/label_goods_name" />

        <TextView
            android:id="@+id/label_goods_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="代号："
            android:textColor="@color/color_grey_757575"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_goods_name" />

        <TextView
            android:id="@+id/tv_goods_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DH155457"
            android:textColor="@color/color_grey_757575"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/label_goods_code"
            app:layout_constraintStart_toEndOf="@+id/label_goods_code"
            app:layout_constraintTop_toTopOf="@+id/label_goods_code" />

        <TextView
            android:id="@+id/label_goods_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规格型号："
            android:textColor="@color/color_grey_757575"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/label_goods_code"
            app:layout_constraintEnd_toStartOf="@+id/tv_goods_spec"
            app:layout_constraintTop_toTopOf="@+id/label_goods_code"

            />

        <TextView
            android:id="@+id/tv_goods_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120*130"
            android:textColor="@color/color_grey_757575"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/label_goods_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/label_goods_code" />

        <TextView
            android:id="@+id/label_goods_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="备注："
            android:textColor="@color/color_grey_757575"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_goods_code" />

        <TextView
            android:id="@+id/tv_goods_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:textColor="@color/color_grey_757575"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/label_goods_remark"
            app:layout_constraintStart_toEndOf="@+id/label_goods_remark"
            app:layout_constraintTop_toTopOf="@+id/label_goods_remark" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/right"
            app:layout_constraintBottom_toBottomOf="@+id/label_goods_remark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/label_goods_remark" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>