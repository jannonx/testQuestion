<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/color_green_00B578">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@color/color_white_f5f7fa"
            android:padding="@dimen/dp_12"
            app:layout_scrollFlags="scroll|enterAlways">


            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="100000.00元"
                android:textColor="@color/color_blue_1890ff"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2020-09-03 15:32"
                android:textColor="@color/color_grey_757575"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="@+id/tv_money"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_money" />

            <TextView
                android:id="@+id/label_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="客户名称："
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_10"
                app:layout_constraintStart_toStartOf="@+id/tv_money"
                app:layout_constraintTop_toBottomOf="@+id/tv_money" />

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                tools:text="固远深圳固远深圳固远深圳固远深圳固远深圳固远深圳固远深圳固远深圳固远深圳固远深圳固远深圳固远深圳固远深圳固远深圳固远深圳固远深圳固远深圳固远深圳"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_10"
                app:layout_constraintStart_toEndOf="@+id/label_customer_name"
                app:layout_constraintTop_toTopOf="@+id/label_customer_name" />

            <TextView
                android:id="@+id/label_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:text="项目名称："
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toStartOf="@+id/tv_money"
                app:layout_constraintTop_toBottomOf="@+id/tv_customer_name" />

            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="0dp"
                android:layout_marginEnd="@dimen/dp_24"
                android:layout_height="wrap_content"
                tools:text="空分机项目空分机项目空分机项目空分机项目空分机项目空分机项目"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toStartOf="@+id/image_view"
                app:layout_constraintStart_toEndOf="@+id/label_project_name"
                app:layout_constraintTop_toTopOf="@+id/label_project_name" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/ic_arrow_gray_right"
                app:layout_constraintBottom_toBottomOf="@+id/label_project_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/label_project_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>