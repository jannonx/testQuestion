<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="goodsSignListBean"
            type="com.guyuan.dear.work.goodssign.data.bean.GoodsSignListBean.ContentBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/goods_customer_name_tv"
            style="@style/TextBigBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="@{goodsSignListBean.supplierName}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="深圳固远" />

        <TextView
            android:id="@+id/goods_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text='@{goodsSignListBean.arriveStatus==1?"待收货":"收货"}'
            app:layout_constraintBottom_toBottomOf="@+id/goods_customer_name_tv"
            app:layout_constraintStart_toEndOf="@+id/goods_customer_name_tv"
            app:layout_constraintTop_toTopOf="@+id/goods_customer_name_tv"
            tools:text="待收货" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
