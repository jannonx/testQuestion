<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_contract_comment_tail_iv_anchor_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_svg_circle"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        />


    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/item_contract_comment_tail_iv_anchor_1"
        app:layout_constraintRight_toRightOf="@id/item_contract_comment_tail_iv_anchor_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_contract_comment_tail_iv_anchor_1"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_contract_comment_tail_tv_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_contract_comment_tail_iv_anchor_1"
        app:layout_constraintTop_toTopOf="@id/item_contract_comment_tail_iv_anchor_1"
        app:layout_constraintBottom_toBottomOf="@id/item_contract_comment_tail_iv_anchor_1"
        android:text="首次创建时间：2020-08-17 15:20"
        android:layout_margin="@dimen/dp_10"/>



</androidx.constraintlayout.widget.ConstraintLayout>