<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBFBFF"
            app:elevation="0dp">

            <include layout="@layout/toolbar" />

        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:id="@+id/approval_detail_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/approval_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/approval_reject_tv"
                style="@style/btn_style_white_round_corner_black_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="驳回" />

            <TextView
                android:id="@+id/approval_accept_tv"
                style="@style/commit_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="通过" />
        </LinearLayout>
    </LinearLayout>

</layout>