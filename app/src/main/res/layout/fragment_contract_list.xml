<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>
        <variable
            name="fragment_contract_list_vm"
            type="com.guyuan.dear.focus.contract.view.contractList.ContractListViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.guyuan.dear.customizeview.contractSearchBar.ContractSearchBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <tl.com.easy_recycleview_library.BaseRecyclerView
                android:id="@+id/fragment_contract_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                layout="@layout/layout_no_data"
                android:visibility="@{fragment_contract_list_vm.shouldShowNoData?View.VISIBLE:View.GONE}" />
        </FrameLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>