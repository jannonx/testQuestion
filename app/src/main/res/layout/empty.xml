<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UseCompoundDrawables">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/no_data_iv"
                android:layout_width="160dp"
                android:layout_height="154dp"
                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_svg_no_data" />

            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                tools:text="暂无数据" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tv_refresh"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="重新获取"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                app:backgroundTint="@color/blue"
                app:cornerRadius="@dimen/dp_4" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_tem_empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_35"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            tools:visibility="visible"
            android:visibility="gone">

            <ImageView
                android:id="@+id/tem_no_data_iv"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                tools:ignore="ContentDescription"
                android:src="@drawable/ic_svg_no_data" />

            <TextView
                android:id="@+id/tem_tv_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:textSize="@dimen/sp_15"
                android:text="暂无数据" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tem_tv_refresh"
                android:background="@drawable/bg_blue_1677ff_corner_r4"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:paddingStart="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:text="重新获取"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
</layout>


