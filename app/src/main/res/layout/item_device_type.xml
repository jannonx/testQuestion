<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/bg_white_corner_4"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/device_type_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/device_open" />

            <TextView
                android:id="@+id/device_title_tv"
                style="@style/card_text_title_new"
                android:layout_marginLeft="4dp"
                tools:text="开机设备" />

            <TextView
                android:id="@+id/device_type_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0050B4"
                android:textSize="18sp"
                tools:text="4 台" />
        </LinearLayout>

        <tl.com.easy_recycleview_library.BaseRecyclerView
            android:id="@+id/device_type_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />
    </LinearLayout>

</LinearLayout>