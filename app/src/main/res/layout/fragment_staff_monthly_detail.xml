<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
     <variable
         name="fragment_staff_monthly_detail_vm"
         type="com.guyuan.dear.focus.hr.view.hrStaffMonthlyDetail.StaffMonthlyDetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="120dp"
                android:background="@drawable/shape_clock_in_top"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_staff_monthly_detail_iv_avatar"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/dp_12"
                app:srcCompat="@drawable/ic_svg_staff_icon_default"
                app:setUserCircleNetImage="@{fragment_staff_monthly_detail_vm.imgUrl}"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fragment_staff_monthly_detail_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{fragment_staff_monthly_detail_vm.name}"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/fragment_staff_monthly_detail_iv_avatar"
                app:layout_constraintLeft_toRightOf="@id/fragment_staff_monthly_detail_iv_avatar"
                android:layout_marginLeft="8dp"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/fragment_staff_monthly_detail_tv_name"
                app:layout_constraintBottom_toBottomOf="@id/fragment_staff_monthly_detail_iv_avatar"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:text="工号："/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:text="@{fragment_staff_monthly_detail_vm.workId}"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <FrameLayout
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_28"
                android:background="@drawable/shape_left_round_right_rec_green_2fc25b"
                app:layout_constraintTop_toTopOf="@id/fragment_staff_monthly_detail_iv_avatar"
                app:layout_constraintBottom_toBottomOf="@id/fragment_staff_monthly_detail_iv_avatar"
                app:layout_constraintRight_toRightOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_margin="@dimen/dp_2"
                    app:srcCompat="@drawable/ic_svg_telephone_green_white_bg_round"
                    android:onClick="@{fragment_staff_monthly_detail_vm.onClickTelNumber}"/>
            </FrameLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/fragment_staff_monthly_detail_top_rec_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="@dimen/dp_12"
                android:background="@drawable/bg_white_corner_4"
                app:layout_constraintTop_toBottomOf="@id/fragment_staff_monthly_detail_iv_avatar">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_70"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/color_grey_999999"
                        android:text="所属部门" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:text="@{fragment_staff_monthly_detail_vm.dept}"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_70"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/color_grey_999999"
                        android:text="所属岗位" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:text="@{fragment_staff_monthly_detail_vm.post}"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_70"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/color_grey_999999"
                        android:text="在职状态" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:text="@{fragment_staff_monthly_detail_vm.enrollment}"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/fragment_staff_monthly_detail_month_selector_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                app:layout_constraintTop_toBottomOf="@id/fragment_staff_monthly_detail_top_rec_container"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/white"
                android:gravity="center_vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_svg_left_back_press"
                    android:paddingLeft="@dimen/dp_12"
                    android:onClick="@{fragment_staff_monthly_detail_vm.onClickToPreMonth}"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2020年2月"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    app:showChineseYearMonth="@{fragment_staff_monthly_detail_vm.calendarDisplayDate}"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_svg_right_forward_arrow"
                    android:paddingRight="@dimen/dp_12"
                    android:onClick="@{fragment_staff_monthly_detail_vm.onClickToNextMonth}"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.github.sundeepk.compactcalendarview.CompactCalendarView
                android:id="@+id/fragment_staff_monthly_detail_calendar"
                android:layout_width="0dp"
                android:layout_height="314dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_staff_monthly_detail_month_selector_container"

                app:compactCalendarTargetHeight="314dp"
                app:compactCalendarTextSize="18sp"
                app:compactCalendarBackgroundColor="#FAFAFA"
                app:compactCalendarTextColor="#333333"
                app:compactCalendarCurrentSelectedDayBackgroundColor="#1677FF"
                app:compactCalendarCurrentDayBackgroundColor="#CCE0FB"
                app:compactCalendarEventIndicatorStyle="small_indicator"
                app:compactCalendarCurrentDayTextColor="@color/white"
                app:compactCalendarCurrentSelectedDayTextColor="@color/white"
                app:compactCalendarOtherMonthDaysTextColor="#CCCCCC"
                app:compactCalendarDisplayOtherMonthDays="true"
                app:compactCalendarMultiEventIndicatorColor="@color/color_black"
                app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="false"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/fragment_staff_monthly_detail_attend_type_color_indicator_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_staff_monthly_detail_calendar">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    app:srcCompat="@drawable/ic_svg_round_filled_blue_1890ff_24dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正常"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginLeft="@dimen/dp_4"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    app:srcCompat="@drawable/ic_svg_round_filled_red_f04864_24dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缺岗"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginLeft="@dimen/dp_4"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    app:srcCompat="@drawable/ic_svg_round_filled_green_2fc25b_24dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请假"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginLeft="@dimen/dp_4"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    app:srcCompat="@drawable/ic_svg_round_filled_orange_fa8c16_24dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="迟到"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginLeft="@dimen/dp_4"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    app:srcCompat="@drawable/ic_svg_round_filled_purple_3436c7_24dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早退"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginLeft="@dimen/dp_4"/>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fragment_staff_monthly_detail_iv_anchor_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_staff_monthly_detail_attend_type_color_indicator_container"
                android:text="上班"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_black_333333"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_24"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_black_333333"
                app:layout_constraintTop_toTopOf="@id/fragment_staff_monthly_detail_iv_anchor_view_1"
                app:layout_constraintBottom_toBottomOf="@id/fragment_staff_monthly_detail_iv_anchor_view_1"
                app:layout_constraintLeft_toRightOf="@id/fragment_staff_monthly_detail_iv_anchor_view_1"
                android:layout_marginLeft="8dp"
                android:text="@{fragment_staff_monthly_detail_vm.currentSelectRecord.amStartTime}"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_staff_monthly_detail_iv_am_status_round_point"
                android:layout_width="8dp"
                android:layout_height="8dp"
                app:srcCompat="@drawable/ic_svg_round_filled_blue_1890ff_24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/fragment_staff_monthly_detail_iv_anchor_view_1"
                app:layout_constraintTop_toTopOf="@id/fragment_staff_monthly_detail_iv_anchor_view_1"
                android:layout_marginLeft="@dimen/dp_12"
                app:showAttendState="@{fragment_staff_monthly_detail_vm.currentSelectRecord.amStatus}"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fragment_staff_monthly_detail_iv_anchor_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下班"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_black_333333"
                android:layout_marginTop="@dimen/dp_34"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dp_50"
                app:layout_constraintLeft_toLeftOf="@id/fragment_staff_monthly_detail_iv_anchor_view_1"
                app:layout_constraintTop_toBottomOf="@id/fragment_staff_monthly_detail_iv_anchor_view_1"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_staff_monthly_detail_iv_pm_status_round_point"
                android:layout_width="8dp"
                android:layout_height="8dp"
                app:srcCompat="@drawable/ic_svg_round_filled_blue_1890ff_24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/fragment_staff_monthly_detail_iv_anchor_view_2"
                app:layout_constraintTop_toTopOf="@id/fragment_staff_monthly_detail_iv_anchor_view_2"
                android:layout_marginLeft="@dimen/dp_12"
                app:showAttendState="@{fragment_staff_monthly_detail_vm.currentSelectRecord.pmStatus}"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_black_333333"
                app:layout_constraintTop_toTopOf="@id/fragment_staff_monthly_detail_iv_anchor_view_2"
                app:layout_constraintBottom_toBottomOf="@id/fragment_staff_monthly_detail_iv_anchor_view_2"
                app:layout_constraintLeft_toRightOf="@id/fragment_staff_monthly_detail_iv_anchor_view_2"
                android:layout_marginLeft="8dp"
                android:text="@{fragment_staff_monthly_detail_vm.currentSelectRecord.pmEndTime}"
                />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="0dp"
                android:background="@color/color_grey_eeeeee"
                app:layout_constraintLeft_toLeftOf="@id/fragment_staff_monthly_detail_iv_am_status_round_point"
                app:layout_constraintRight_toRightOf="@id/fragment_staff_monthly_detail_iv_am_status_round_point"
                app:layout_constraintTop_toBottomOf="@id/fragment_staff_monthly_detail_iv_am_status_round_point"
                app:layout_constraintBottom_toTopOf="@id/fragment_staff_monthly_detail_iv_pm_status_round_point"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>