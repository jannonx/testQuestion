<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_date_select"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"

    android:background="@color/color_white_f5f7fa"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/label_day_select_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="统计时间"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/sp_16" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_select_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="horizontal"

        >

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/bg_white_round_stroke_f5f7fa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ll_content"
            app:layout_constraintStart_toStartOf="@+id/ll_content"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_select_start_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_12"
                android:gravity="center_vertical"
                android:text="2019-04-03"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/label_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" — "
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_select_end_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="2019-04-03"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_12"
                app:srcCompat="@drawable/ic_arrow_down_gray" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>