                    android:layout_marginEnd="@dimen/dp_8"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_installation_debug"
                    app:layout_constraintEnd_toStartOf="@+id/arrow_installation_debug"
                    app:layout_constraintTop_toTopOf="@+id/iv_installation_debug"
                    tools:text="1000" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/arrow_installation_debug"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_arrow_gray_right"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_installation_debug"
