                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/label_goods_check"
                    style="@style/card_text_title"
                    android:layout_marginStart="@dimen/dp_6"
                    android:text="货物清点报告"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_goods_check"
                    app:layout_constraintStart_toEndOf="@+id/iv_goods_check"
                    app:layout_constraintTop_toTopOf="@+id/iv_goods_check" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_goods_check"
                    style="@style/card_content_blue"
                    android:layout_marginEnd="@dimen/dp_8"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_goods_check"
                    app:layout_constraintEnd_toStartOf="@+id/arrow_goods_check"
                    app:layout_constraintTop_toTopOf="@+id/iv_goods_check"
                    tools:text="1000" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/arrow_goods_check"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_arrow_gray_right"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_goods_check"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_goods_check" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cl_safe_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
