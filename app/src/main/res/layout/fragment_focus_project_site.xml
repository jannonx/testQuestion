                    app:layout_constraintBottom_toBottomOf="@+id/iv_customer_acceptance"
                    app:layout_constraintStart_toEndOf="@+id/iv_customer_acceptance"
                    app:layout_constraintTop_toTopOf="@+id/iv_customer_acceptance" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_customer_acceptance"
                    style="@style/card_content_blue"
                    android:layout_marginEnd="@dimen/dp_8"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_customer_acceptance"
                    app:layout_constraintEnd_toStartOf="@+id/arrow_customer_acceptance"
