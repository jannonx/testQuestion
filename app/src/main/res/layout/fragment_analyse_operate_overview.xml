<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/cl_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginEnd="@dimen/dp_12"
            app:cardCornerRadius="@dimen/dp_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/label_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总销售额"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sum"
                    style="@style/card_content_blue"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textSize="@dimen/sp_32"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/label_sum"
                    tools:text="5000.00" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_7"
                    android:text="万元"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_sum"
                    app:layout_constraintStart_toEndOf="@+id/tv_sum" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/label_sum_last_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="同比上年"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sum" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_sum_arrow"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_4"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_arrow_red_up"
                    app:layout_constraintBottom_toBottomOf="@+id/label_sum_last_year"
                    app:layout_constraintStart_toEndOf="@+id/label_sum_last_year"
                    app:layout_constraintTop_toTopOf="@+id/label_sum_last_year" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sum_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:text="15%"
                    android:textColor="@color/color_red_F04864"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_sum_arrow"
                    app:layout_constraintStart_toEndOf="@+id/iv_sum_arrow"
                    app:layout_constraintTop_toTopOf="@+id/iv_sum_arrow" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <tl.com.easy_recycleview_library.BaseRecyclerView
            android:id="@+id/base_recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@color/color_green_D4FFF1"
            tools:layout_marginTop="@dimen/dp_16" />

    </LinearLayout>

</layout>
