<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/work_device_repair_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/color_white_ffffff"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/control_item_iv"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/control_fix_name"
                        style="@style/card_text_title"
                        android:layout_width="80dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        tools:text="激光切割机" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/card_text_title"
                            android:text="区域位置" />

                        <TextView
                            android:id="@+id/control_position"
                            style="@style/card_text_title_content"
                            android:text="车间3213123123" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            style="@style/card_text_title"
                            android:text="设备编号" />

                        <TextView
                            android:id="@+id/control_device_code_tv"
                            style="@style/card_text_title_content"
                            android:text="A001" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            style="@style/card_text_title"
                            android:text="报&#8194;修&#8194;人" />

                        <TextView
                            android:id="@+id/control_person"
                            style="@style/card_text_title_content"
                            android:text="张三" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            style="@style/card_text_title"
                            android:text="故障类型" />

                        <TextView
                            android:id="@+id/control_type"
                            style="@style/card_text_title_content"
                            android:text="机械故障" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            style="@style/card_text_title"
                            android:text="报修时间" />

                        <TextView
                            android:id="@+id/control_time"
                            style="@style/card_text_title_content"
                            android:text="2019-12-12" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/control_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_blue_btn_selector"
                android:gravity="center"
                android:paddingLeft="18dp"
                android:paddingTop="3.5dp"
                android:paddingRight="18dp"
                android:paddingBottom="3.5dp"
                android:text="执行"
                android:textColor="@color/color_selector_white_to_black_1"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>