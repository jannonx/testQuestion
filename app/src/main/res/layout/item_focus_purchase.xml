<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="purchaseListContentBean"
            type="com.guyuan.dear.focus.purchase.data.bean.PurchaseListBean.ContentBean" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="16dp"
        android:layout_marginRight="@dimen/dp_12"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_12">

            <TextView
                android:id="@+id/purchase_item_name_tv"
                style="@style/TextBigBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="@{purchaseListContentBean.name}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="原材料" />

            <TextView
                android:id="@+id/purchase_item_code_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{String.format(@string/focus_purchase_code,purchaseListContentBean.code)}"
                app:layout_constraintStart_toStartOf="@+id/purchase_item_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/purchase_item_name_tv"
                tools:text="@string/focus_purchase_code" />

            <TextView
                android:id="@+id/purchase_item_status_tv"
                style="@style/TextTagOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                app:focusPurchaseStatus="@{purchaseListContentBean.abnormalType}"
                app:layout_constraintBottom_toBottomOf="@+id/purchase_item_name_tv"
                app:layout_constraintStart_toEndOf="@+id/purchase_item_name_tv"
                app:layout_constraintTop_toTopOf="@+id/purchase_item_name_tv"
                tools:text="换货" />

            <TextView
                android:id="@+id/purchase_item_spec_tv"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{String.format(@string/focus_purchase_spec,purchaseListContentBean.modelCode)}"
                app:layout_constraintStart_toStartOf="@+id/purchase_item_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/purchase_item_code_tv"
                tools:text="@string/focus_purchase_spec" />

            <TextView
                android:id="@+id/purchase_item_quality_tv"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="@{String.format(@string/focus_purchase_quality,purchaseListContentBean.material)}"
                app:layout_constraintBottom_toBottomOf="@+id/purchase_item_spec_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/purchase_item_spec_tv"
                tools:text="@string/focus_purchase_quality" />

            <View
                android:id="@+id/view17"
                style="@style/DivideLine"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/purchase_item_spec_tv" />

            <TextView
                android:id="@+id/purchase_item_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#1890FF"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="@+id/purchase_item_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/view17"
                tools:text="@string/focus_purchase_return" />

            <TextView
                android:id="@+id/purchase_item_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#1890FF"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="@+id/purchase_item_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/purchase_item_number_tv"
                tools:text="@string/focus_purchase_result" />

            <View
                android:id="@+id/view18"
                style="@style/DivideLine"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/purchase_item_result_tv" />

            <TextView
                android:id="@+id/purchase_item_person_tv"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{String.format(@string/focus_purchase_seal_person,purchaseListContentBean.createName)}"
                app:layout_constraintStart_toStartOf="@+id/purchase_item_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/view18"
                tools:text="@string/focus_purchase_seal_person" />

            <TextView
                android:id="@+id/purchase_item_time_tv"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="@{purchaseListContentBean.createTime}"
                app:layout_constraintBottom_toBottomOf="@+id/purchase_item_person_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/purchase_item_person_tv"
                tools:text="2020-11-23" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
