<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_corner_10dp_white_solid">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_image_picker_iv_camera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialog_image_picker_iv_gallery"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:srcCompat="@drawable/selector_ic_camera_blue_to_orange" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:text="拍照"
        android:textColor="@color/color_black_000000"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="@id/dialog_image_picker_iv_camera"
        app:layout_constraintRight_toRightOf="@id/dialog_image_picker_iv_camera"
        app:layout_constraintTop_toBottomOf="@id/dialog_image_picker_iv_camera" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_image_picker_iv_gallery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/dialog_image_picker_iv_camera"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:srcCompat="@drawable/selector_ic_image_blue_to_orange" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:text="图库"
        android:textColor="@color/color_black_000000"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="@id/dialog_image_picker_iv_gallery"
        app:layout_constraintRight_toRightOf="@id/dialog_image_picker_iv_gallery"
        app:layout_constraintTop_toBottomOf="@id/dialog_image_picker_iv_gallery" />

</androidx.constraintlayout.widget.ConstraintLayout>