<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.guyuan.dear.utils.GlideUtils" />

        <variable
            name="focusPurchaseRecordBean"
            type="com.guyuan.dear.focus.purchase.data.bean.PurchaseRecordBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_blue_dot"
            app:layout_constraintBottom_toBottomOf="@+id/purchase_status_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView13"
            style="@style/DivideLine"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/purchase_status_tv"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:focusPurchaseStatus="@{focusPurchaseRecordBean.type}"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="换货" />

        <TextView
            android:id="@+id/purchase_record_time_tv"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{focusPurchaseRecordBean.createTime}"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/purchase_status_tv"
            app:layout_constraintTop_toBottomOf="@+id/purchase_status_tv"
            tools:text="2020-12-22" />

        <ImageView
            android:id="@+id/purchase_record_head_iv"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="16dp"
            app:imgType="@{GlideUtils.CIRCLE}"
            app:imgUrl="@{focusPurchaseRecordBean.imgUrl}"
            app:layout_constraintStart_toStartOf="@+id/purchase_status_tv"
            app:layout_constraintTop_toBottomOf="@+id/purchase_record_time_tv"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/purchase_record_name_tv"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@{focusPurchaseRecordBean.createName}"
            android:textColor="#333333"
            app:layout_constraintStart_toEndOf="@+id/purchase_record_head_iv"
            app:layout_constraintTop_toTopOf="@+id/purchase_record_head_iv"
            tools:text="李雷" />

        <TextView
            android:id="@+id/purchase_record_reason_tv"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{String.format(@string/focus_purchase_record_reason,focusPurchaseRecordBean.reason)}"
            android:textColor="#333333"
            app:layout_constraintStart_toStartOf="@+id/purchase_record_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/purchase_record_name_tv"
            tools:text="@string/focus_purchase_record_reason" />

        <TextView
            android:id="@+id/purchase_record_from_tv"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:text="@{String.format(@string/focus_purchase_record_from,focusPurchaseRecordBean.deptName)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/purchase_record_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/purchase_record_reason_tv"
            tools:text="@string/focus_purchase_record_from" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
