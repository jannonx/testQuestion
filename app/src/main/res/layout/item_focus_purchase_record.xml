<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.guyuan.dear.utils.GlideUtils" />

        <variable
            name="focusPurchaseRecordBean"
            type="com.guyuan.dear.focus.purchase.data.bean.PurchaseRecordBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_blue_dot"
            app:layout_constraintBottom_toBottomOf="@+id/purchase_status_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView13"
            style="@style/DivideLine"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/purchase_status_tv"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textStyle="bold"
            app:focusPurchaseStatus="@{focusPurchaseRecordBean.type}"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="换货" />

        <TextView
            android:id="@+id/purchase_record_time_tv"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{focusPurchaseRecordBean.createTime}"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/purchase_status_tv"
            app:layout_constraintTop_toBottomOf="@+id/purchase_status_tv"
            tools:text="2020-12-22" />

        <TextView
            android:id="@+id/textView6"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/purchase_status_tv"
            app:layout_constraintTop_toBottomOf="@+id/purchase_record_time_tv"
            app:purchaseNumber="@{focusPurchaseRecordBean.operateNum}"
            app:purchaseStatus="@{focusPurchaseRecordBean.type}"
            tools:text="@string/return_goods_number" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/purchase_status_tv"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <ImageView
                android:id="@+id/purchase_record_head_iv"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                app:imgType="@{GlideUtils.CIRCLE}"
                app:imgUrl="@{focusPurchaseRecordBean.imgUrl}"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:id="@+id/purchase_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/purchase_record_name_tv"
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@{focusPurchaseRecordBean.createName}"
                    android:textColor="#333333"
                    tools:text="李雷" />

                <TextView
                    android:id="@+id/purchase_record_reason_tv"
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{String.format(@string/focus_purchase_record_reason,focusPurchaseRecordBean.reason)}"
                    android:textColor="#333333"
                    tools:text="@string/focus_purchase_record_reason" />

                <TextView
                    android:id="@+id/purchase_record_from_tv"
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:text="@{String.format(@string/focus_purchase_record_from,focusPurchaseRecordBean.deptName)}"
                    tools:text="@string/focus_purchase_record_from" />

            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
