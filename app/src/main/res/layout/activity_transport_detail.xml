<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="transportViewModel"
            type="com.guyuan.dear.focus.transport.data.TransportViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_window"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <include
                android:id="@+id/toolbar_container"
                layout="@layout/toolbar" />

        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_6">

            <TextView
                android:id="@+id/transport_detail_name_tv"
                style="@style/TextBigBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{transportViewModel.transportDetailMLD.projectName}"
                tools:text="深圳固远" />

            <TextView
                android:id="@+id/transport_detail_code_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{transportViewModel.transportDetailMLD.projectNumber}"
                tools:text="2321312312" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_6">

            <TextView
                android:id="@+id/transport_detail_address_tv"
                style="@style/TextNormal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{transportViewModel.transportDetailMLD.acceptAddress}"
                android:textColor="#999999"
                tools:text="深圳固远" />

            <TextView
                android:id="@+id/transport_detail_time_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{transportViewModel.transportDetailMLD.arrivePlanTime}"
                android:textColor="#999999"
                tools:text="2321312312" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_6">

            <TextView
                android:id="@+id/transport_detail_car_number_tv"
                style="@style/TextBigBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{transportViewModel.transportDetailMLD.carNumber}"
                tools:text="深圳固远" />

            <TextView
                android:id="@+id/transport_detail_phone_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_phone_blue"
                android:drawablePadding="8dp"
                android:text="@{transportViewModel.transportDetailMLD.motormanPhone}"
                tools:text="2321312312" />
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/transport_detail_tl"
            style="@style/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            app:tabPaddingEnd="30dp"
            app:tabPaddingStart="30dp" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/transport_detail_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:detailData="@{transportViewModel.transportDetailMLD}" />
    </LinearLayout>
</layout>

