<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_order_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_12"
    android:paddingEnd="@dimen/dp_12"
    tools:background="@color/color_grey_eeeeee">

    <View
        android:id="@+id/v_line_above"
        android:layout_width="@dimen/dp_0p5"
        android:layout_height="0dp"
        android:background="@color/color_grey_eeeeee"

        app:layout_constraintBottom_toTopOf="@+id/view_ball"
        app:layout_constraintEnd_toEndOf="@+id/view_ball"
        app:layout_constraintStart_toStartOf="@+id/view_ball"
        app:layout_constraintTop_toTopOf="parent"
 />

    <View
        android:id="@+id/view_ball"
        android:layout_width="@dimen/dp_8p5"
        android:layout_height="@dimen/dp_8p5"
        android:background="@drawable/bg_green_2fc25b_round"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_product_status" />

    <View
        android:id="@+id/v_line_below"
        android:layout_width="@dimen/dp_0p5"
        android:layout_height="0dp"
        android:background="@color/color_grey_eeeeee"
        app:layout_constraintBottom_toBottomOf="@+id/view_bottom"
        app:layout_constraintEnd_toEndOf="@+id/view_ball"
        app:layout_constraintStart_toStartOf="@+id/view_ball"
        app:layout_constraintTop_toBottomOf="@+id/view_ball" />

    <TextView
        android:id="@+id/tv_product_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:text="生产完成"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view_ball"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="2020-09-03 18:53"
        android:textColor="@color/color_grey_999999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="@+id/tv_product_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_status" />

    <com.guyuan.dear.utils.view.roundedimageview.RoundedImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_16"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        app:corner_radius="1000dp"
        app:layout_constraintStart_toStartOf="@+id/tv_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_time" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_2"
        android:text="葛蕊山"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar" />


    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_8"
        android:text="深圳市南山区西湖大道3046号香江金融中心大厦1708室"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />


    <TextView
        android:id="@+id/label_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="来自部门："
        android:textColor="@color/color_grey_999999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="@+id/tv_comment"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment" />

    <TextView
        android:id="@+id/tv_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="销售部"
        android:textColor="@color/color_grey_999999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@+id/label_department"
        app:layout_constraintStart_toEndOf="@+id/label_department"
        app:layout_constraintTop_toTopOf="@+id/label_department" />

    <View
        android:id="@+id/view_bottom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_department" />

</androidx.constraintlayout.widget.ConstraintLayout>


