<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue_0050B4"
        android:orientation="vertical">

        <com.example.mvvmlibrary.customizeview.StatusBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:elevation="1dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home_logo_tv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16.5dp"
                android:src="@mipmap/app_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_bar_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.5dp"
                android:text="智能管理系统"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="@id/home_logo_tv"
                app:layout_constraintLeft_toRightOf="@id/home_logo_tv"
                app:layout_constraintTop_toTopOf="@id/home_logo_tv" />


            <ImageView
                android:id="@+id/home_qr_iv"
                android:layout_width="31dp"
                android:layout_height="0dp"
                android:layout_marginRight="19dp"
                android:src="@mipmap/scan"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>
