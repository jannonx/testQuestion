<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_5"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/dp_10">
    <androidx.appcompat.widget.LinearLayoutCompat

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow android:gravity="center_vertical"
                android:padding="@dimen/dp_5">
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="合同编号："
                    android:textColor="@color/black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/black"
                    android:id="@+id/item_contract_prg_home_tv_contract_id"
                    android:text="xxxxxx"/>
            </TableRow>
            <TableRow android:gravity="center_vertical"
                android:padding="@dimen/dp_5">
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="买方："/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_contract_prg_home_tv_buyer"
                    android:text="xxxxxx"/>
            </TableRow>
            <TableRow android:gravity="center_vertical"
                android:padding="@dimen/dp_5">
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="合同签订时间："/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_contract_prg_home_tv_date"
                    android:text="xxxxxx"/>
            </TableRow>
        </TableLayout>
        <com.guyuan.dear.customizeview.flowlayout.TagFlowLayout
            android:id="@+id/item_contract_prg_home_tag_flow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>
