<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/bg_white_corner_6"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_12">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="当前合同项目已暂停"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@color/color_orange_FFECE3"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_9p5"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_8p5"
            android:text="该项目已暂停，请等待项目重启任务，谢谢！"
            android:textColor="@color/color_orange_FF6010"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white_f5f7fa"
            android:paddingBottom="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_tip">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_dimensionality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center"
                android:text="判定维度："
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_dimensionality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toStartOf="@+id/tv_time"
                app:layout_constraintStart_toEndOf="@+id/label_dimensionality"
                app:layout_constraintTop_toTopOf="@+id/label_dimensionality"
                tools:text="国家政策" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_12"
                android:gravity="center"
                android:textColor="@color/color_757575"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="@+id/label_dimensionality"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/label_dimensionality"
                tools:text="2020-12-24 10:00" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center"
                android:text="审批人通过人："
                android:textColor="@color/color_757575"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dimensionality" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_person"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:textColor="@color/color_757575"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/label_person"
                app:layout_constraintTop_toTopOf="@+id/label_person"
                tools:text="小江" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_stopCause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="12dp"
                android:textColor="@color/color_grey_757575"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_person"
                tools:text="暂停原因：内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_bottom_corner_6"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tip_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="12dp"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_10"
                android:text="您目前的操作权限是：只能查阅该项目相关信息，不可修改内容或提交新的内容，谢谢！" />

            <TextView
                android:id="@+id/tv_close"
                style="@style/commit_btn"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginBottom="@dimen/dp_24p5"
                android:text="关闭提示窗口"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tip_2" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
