<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="messageVM"
            type="com.guyuan.dear.message.data.MessageViewModel" />
    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_16"
            app:cardBackgroundColor="@color/color_white_ffffff"
            app:cardCornerRadius="3dp"
            app:cardElevation="2dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_16">

                    <TextView
                        android:id="@+id/message_detail_title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{messageVM.messageDetailMLD.msgTitle}"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="消息标题消息标题消息标题消息标题消息标题消息标题消息标题消息标题消息标题消息标题消息标题消息标题" />


                    <TextView
                        android:id="@+id/message_detail_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="@{messageVM.messageDetailMLD.msgContent}"
                        app:layout_constraintTop_toBottomOf="@+id/message_detail_title_tv"
                        tools:text="        约争专强即已重部还前当经太织可再增教元且划身过具山年土红进问片放置山也层利议住历该四见委出各空才程水。 她因现深价阶争圆变以标据即计达多地元精区对给之来力拉消式山程车五观。目志劳亲六局识许音重书分又示没三新越装山联调年联响交件要极及说许育子然养别给正片改市无期条层道二细速。报方报参力半复中书现委日易北量目以律形响必该铁委理按回已后被些设织近县质段识飞。" />

                    <TextView
                        android:id="@+id/message_detail_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:textColor="@color/color_grey_999999"
                        android:textSize="@dimen/sp_12"
                        android:text="@{messageVM.messageDetailMLD.createTime}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/message_detail_content_tv"
                        tools:text="2017-10-11" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
