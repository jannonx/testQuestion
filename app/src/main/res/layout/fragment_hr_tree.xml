<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment_hr_tree_vm"
            type="com.guyuan.dear.focus.hr.view.hrTree.HrTreeViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            layout="@layout/layout_search_bar_for_staff"
            app:onSelectSearchStaff="@{fragment_hr_tree_vm.onSelectSearchStaff}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_8"
            android:text="@{fragment_hr_tree_vm.companyName,default=xxxxx}"
            android:textColor="@color/color_black_000000"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_12">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_hr_tree_top_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{fragment_hr_tree_vm.onClickNavigateToFrontPage}"
                    android:text="首页"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/sp_16" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/item_hr_tree_top_iv_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_4"
                    app:srcCompat="@drawable/ic_svg_right_arrow" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_hr_tree_top_recycler_view"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_45"
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <include
            layout="@layout/view_divider_horizontal_grey_e5e5e5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_hr_tree_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>