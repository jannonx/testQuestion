<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/color_green_00B578">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@color/color_grey_eeeeee"
            android:padding="@dimen/dp_12"
            app:layout_scrollFlags="scroll|enterAlways">


            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:text="分馏塔冷箱制作安装"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_12"
                android:text="07.08~07.30"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="@+id/tv_project_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_project_name" />

            <TextView
                android:id="@+id/label_duty_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:text="勘查人员："
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toStartOf="@+id/tv_project_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_project_name" />

            <TextView
                android:id="@+id/tv_duty_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小刘"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="@+id/label_duty_unit"
                app:layout_constraintStart_toEndOf="@+id/label_duty_unit"
                app:layout_constraintTop_toTopOf="@+id/label_duty_unit" />


            <TextView
                android:id="@+id/tv_produce_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_orange_ffece3_corner_2"
                android:paddingStart="@dimen/dp_4"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_2"
                android:text="异常"
                android:textColor="@color/color_orange_FF6010"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="@+id/tv_duty_unit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_duty_unit" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>