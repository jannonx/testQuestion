<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.guyuan.dear.work.contractPause.beans.myPauseApplyDetail.ApproveLogProcessing" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_my_pause_apply_log_processing_view_anchor_1"
            android:layout_width="8.5dp"
            android:layout_height="8.5dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="31.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_svg_round_filled_blue_1890ff_24dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="@color/color_grey_e5e5e5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/item_my_pause_apply_log_processing_view_anchor_1"
            app:layout_constraintRight_toRightOf="@id/item_my_pause_apply_log_processing_view_anchor_1"
            app:layout_constraintTop_toBottomOf="@id/item_my_pause_apply_log_processing_view_anchor_1" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="@color/color_grey_e5e5e5"
            app:layout_constraintBottom_toTopOf="@id/item_my_pause_apply_log_processing_view_anchor_1"
            app:layout_constraintLeft_toLeftOf="@id/item_my_pause_apply_log_processing_view_anchor_1"
            app:layout_constraintRight_toRightOf="@id/item_my_pause_apply_log_processing_view_anchor_1"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_my_pause_apply_log_processing_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="@{data.currentTurn.name}"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/item_my_pause_apply_log_processing_view_anchor_1"
            app:layout_constraintLeft_toRightOf="@id/item_my_pause_apply_log_processing_view_anchor_1"
            app:layout_constraintTop_toTopOf="@id/item_my_pause_apply_log_processing_view_anchor_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审批中"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/item_my_pause_apply_log_processing_tv_name"
            app:layout_constraintLeft_toRightOf="@id/item_my_pause_apply_log_processing_tv_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>