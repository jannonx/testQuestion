<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_window"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:text="设备信息"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/card_text_title_new"
                            android:gravity="center_vertical"
                            android:text="设备名称" />

                        <TextView
                            android:id="@+id/control_maintain_name"
                            style="@style/card_text_title_content"
                            tools:text="激光切割机" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <TextView
                            style="@style/card_text_title_new"
                            android:text="设备编号" />

                        <TextView
                            android:id="@+id/control_maintain_number"
                            style="@style/card_text_title_content"
                            tools:text="S001" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <TextView
                            style="@style/card_text_title_new"
                            android:text="设备型号" />

                        <TextView
                            android:id="@+id/control_maintain_type"
                            style="@style/card_text_title_content"
                            tools:text="AAAA" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <TextView
                            style="@style/card_text_title_new"
                            android:text="设备位置" />

                        <TextView
                            android:id="@+id/control_maintain_position"
                            style="@style/card_text_title_content"
                            tools:text="车间1" />
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="上报人"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_white_corner_4"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/control_maintain_report_person_tv"
                    style="@style/card_text_title"
                    android:layout_marginLeft="12dp"
                    tools:text="李雷" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="保养类型"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/bg_white_corner_4"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <com.guyuan.dear.customizeview.flowlayout.TagFlowLayout
                    android:id="@+id/maintain_type_tl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:itemSpacing="38dp"
                    app:max_select="1" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="保养内容"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />


            <com.guyuan.dear.customizeview.flowlayout.TagFlowLayout
                android:id="@+id/control_maintain_tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/bg_white_corner_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="保养时间"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/card_text_title_new"
                            android:text="上次保养时间" />

                        <TextView
                            android:id="@+id/control_maintain_time"
                            style="@style/card_text_title_content"
                            tools:text="2019-11-12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <TextView
                            style="@style/card_text_title_new"
                            android:text="计划开始时间" />

                        <TextView
                            android:id="@+id/control_maintain_plan_start_time"
                            style="@style/card_text_title_content"
                            tools:text="2019-11-12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <TextView
                            style="@style/card_text_title_new"
                            android:text="计划结束时间" />

                        <TextView
                            android:id="@+id/control_maintain_plan_end_time"
                            style="@style/card_text_title_content"
                            tools:text="2019-11-12" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_gray_stroke_default"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="是否上报故障" />

                <Switch
                    android:id="@+id/control_maintain_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="保养视频/图片"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <ImageView
                    android:id="@+id/control_upload_iv"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/camera_open" />

                <com.guyuan.dear.customizeview.flowlayout.TagFlowLayout
                    android:id="@+id/picture_tl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/control_maintain_commit"
                style="@style/commit_btn"
                android:layout_marginBottom="10dp"
                android:text="提交" />
        </LinearLayout>


    </ScrollView>
</layout>
