<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_window"
    android:orientation="vertical"
    tools:background="@color/green">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/bg_white_corner_4"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_8">


        <TextView
            android:id="@+id/tv_client_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_12"
            tools:text="深圳固远智能机器人有限公深圳固远智能机器人有限公司深圳固远智能机器人有限公司司深圳固远智能机器人有限公司"
            app:layout_constraintEnd_toStartOf="@+id/iv_phone"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_client_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            tools:text="联系人：小江"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="@+id/tv_client_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_client_name" />

        <TextView
            android:id="@+id/tv_client_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            tools:text="185 5076 6404"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toEndOf="@+id/tv_client_contact"
            app:layout_constraintTop_toBottomOf="@+id/tv_client_name" />


        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:paddingTop="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            android:paddingStart="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:src="@mipmap/ic_phone_blue"
            app:layout_constraintBottom_toBottomOf="@+id/tv_client_contact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_client_name" />


        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@color/color_grey_e5e5e5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_client_contact"

            />

        <TextView
            android:id="@+id/label_salesman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="跟进："
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toStartOf="@+id/tv_client_name"
            app:layout_constraintTop_toBottomOf="@+id/v_line" />

        <TextView
            android:id="@+id/tv_salesman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="小刘"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/label_salesman"
            app:layout_constraintStart_toEndOf="@+id/label_salesman"
            app:layout_constraintTop_toTopOf="@+id/label_salesman" />

        <TextView
            android:id="@+id/tv_latest_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            tools:text="2020-10-22 15:10"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>