<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.guyuan.dear.focus.contract.bean.contractPrgLog.MeetingComment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_pause_apply_comment_iv_avatar"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_svg_staff_icon_default"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_pause_apply_comment_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/item_pause_apply_comment_iv_avatar"
            app:layout_constraintTop_toTopOf="@id/item_pause_apply_comment_iv_avatar"
            android:text="@{data.name}"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_black_333333"
            android:layout_marginLeft="@dimen/dp_6"
            android:textStyle="bold"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_pause_apply_comment_tv_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@{data.content}"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_black_333333"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_12"
            app:layout_constraintLeft_toLeftOf="@id/item_pause_apply_comment_tv_name"
            app:layout_constraintTop_toBottomOf="@id/item_pause_apply_comment_tv_name"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_12"
            app:layout_constraintLeft_toLeftOf="@id/item_pause_apply_comment_tv_comment"
            app:layout_constraintTop_toBottomOf="@id/item_pause_apply_comment_tv_comment"
            android:layout_marginTop="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_16">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来自部门："
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_12"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.dept}"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_12"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>