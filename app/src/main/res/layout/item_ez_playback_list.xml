<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.videogo.openapi.bean.EZDeviceRecordFile" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_ez_playback_list_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-11-17"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="@color/color_black_333333"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/dp_12"
            app:setContractDate="@{data.startTime.DATE}"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_ez_playback_list_view_anchor_1"
            android:layout_width="9dp"
            android:layout_height="9dp"
            app:layout_constraintTop_toTopOf="@id/item_ez_playback_list_tv_date"
            app:layout_constraintBottom_toBottomOf="@id/item_ez_playback_list_tv_date"
            app:layout_constraintLeft_toRightOf="@id/item_ez_playback_list_tv_date"
            app:srcCompat="@drawable/ic_svg_round_filled_blue_1890ff_24dp"/>

        <View
            android:layout_width="@dimen/dp_0p5"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/item_ez_playback_list_view_anchor_1"
            app:layout_constraintRight_toRightOf="@id/item_ez_playback_list_view_anchor_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_ez_playback_list_view_anchor_1"
            android:background="@color/color_grey_999999"/>

        <View
            android:layout_width="@dimen/dp_0p5"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@id/item_ez_playback_list_view_anchor_1"
            app:layout_constraintRight_toRightOf="@id/item_ez_playback_list_view_anchor_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_ez_playback_list_view_anchor_1"
            android:background="@color/color_grey_999999"/>

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_ez_playback_list_view_anchor_1"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_28"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_12"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_svg_play_video"
                    android:layout_margin="@dimen/dp_6"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视屏"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_4"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>