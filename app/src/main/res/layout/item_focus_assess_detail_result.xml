<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.guyuan.dear.utils.GlideUtils" />

        <variable
            name="focusAssessResultBean"
            type="com.guyuan.dear.focus.assess.data.bean.AuditFormResultBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/person_iv"
                imgType="@{GlideUtils.CIRCLE}"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:imgUrl="@{focusAssessResultBean.auditUserPhotoUrl}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@mipmap/tab_mine_select" />

            <TextView
                android:id="@+id/person_name_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@{focusAssessResultBean.auditUserName}"
                app:layout_constraintBottom_toBottomOf="@+id/person_iv"
                app:layout_constraintStart_toEndOf="@+id/person_iv"
                app:layout_constraintTop_toTopOf="@+id/person_iv"
                app:layout_constraintVertical_bias="0.608"
                tools:text="张三" />

            <TextView
                android:id="@+id/assess_result_tv"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@{focusAssessResultBean.auditResult}"
                app:layout_constraintBottom_toBottomOf="@+id/person_iv"
                app:layout_constraintEnd_toStartOf="@+id/assess_focus_result_iv"
                app:layout_constraintTop_toTopOf="@+id/person_iv"
                tools:text="通过评审" />

            <TextView
                android:id="@+id/assess_discuss_title_tv"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="评审结论："
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/person_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/person_name_tv"
                app:visibilityByView="@{@id/assess_discuss_tv}"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/assess_discuss_tv"
                style="@style/TextSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/color_black_333333"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/person_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/assess_discuss_title_tv"
                app:visibilityByContent="@{focusAssessResultBean.auditExplain}"
                tools:text="23213123123213123213213213213213213123123"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/assess_focus_result_iv"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                app:assessStatus="@{focusAssessResultBean.auditExplain}"
                app:layout_constraintBottom_toBottomOf="@+id/person_iv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/person_iv"
                tools:srcCompat="@mipmap/right" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider"
            style="@style/DivideLine"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</layout>

