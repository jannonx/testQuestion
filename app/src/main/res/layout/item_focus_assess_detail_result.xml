<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/person_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/tab_mine_select" />

    <TextView
        android:id="@+id/person_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/person_iv"
        app:layout_constraintStart_toStartOf="@+id/person_iv"
        app:layout_constraintTop_toBottomOf="@+id/person_iv"
        tools:text="张三" />

    <TextView
        android:id="@+id/assess_result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/person_iv"
        app:layout_constraintTop_toTopOf="@+id/person_iv"
        tools:text="通过评审" />

    <TextView
        android:id="@+id/assess_discuss_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="评审结论："
        app:layout_constraintStart_toStartOf="@+id/assess_result_tv"
        app:layout_constraintTop_toBottomOf="@+id/assess_result_tv" />

    <TextView
        android:id="@+id/assess_discuss_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/assess_discuss_title_tv"
        app:layout_constraintTop_toTopOf="@+id/assess_discuss_title_tv"
        tools:text="23213123123213123213213213213213213123123" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/low_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assess_discuss_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>