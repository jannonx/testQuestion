<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="fragment_contract_prg_detail_vm"
            type="com.guyuan.dear.focus.contract.view.contractProgress.ContractPrgDetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/content_contract_prg_detail_top" />

            <include layout="@layout/view_divider_horizontal_grey_e5e5e5" />

            <tl.com.easy_recycleview_library.BaseRecyclerView
                android:id="@+id/fragment_contract_prg_detail_recycler_view_prg_knots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setContractPrgKnots="@{fragment_contract_prg_detail_vm.detailBean.knotList}"
                android:layout_marginBottom="@dimen/dp_12"/>

            <include layout="@layout/view_divider_horizontal_grey_e5e5e5" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                app:setContractHistoryList="@{fragment_contract_prg_detail_vm.contractHistories}" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</layout>