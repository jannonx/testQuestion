<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_hr_drop_down_suggestion_list_iv_icon"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_svg_staff_icon_default"
        app:layout_constraintRight_toLeftOf="@id/item_hr_drop_down_suggestion_list_tv_location"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:paddingTop="@dimen/dp_12"
        android:id="@+id/item_hr_drop_down_suggestion_list_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_hr_drop_down_suggestion_list_iv_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#333333"
        android:textSize="@dimen/sp_17"
        android:layout_marginLeft="@dimen/dp_12"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/item_hr_drop_down_suggestion_list_tv_location"
        android:text="人名"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_hr_drop_down_suggestion_list_tv_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_hr_drop_down_suggestion_list_iv_icon"
        android:textColor="#999999"
        android:textSize="@dimen/sp_15"
        android:layout_marginLeft="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@id/item_hr_drop_down_suggestion_list_tv_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_hr_drop_down_suggestion_list_tv_work_id"
        android:text="部门"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_hr_drop_down_suggestion_list_tv_work_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#999999"
        android:textSize="@dimen/sp_14"
        android:text="工号：112200"
        android:layout_marginRight="@dimen/dp_12"/>

</androidx.constraintlayout.widget.ConstraintLayout>