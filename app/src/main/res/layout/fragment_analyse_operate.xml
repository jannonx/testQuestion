<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="运营效益"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_24p5"
                android:background="@drawable/bg_gray_eeeee_round"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_select_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_12"
                    android:text="2020"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_12"
                    app:srcCompat="@drawable/ic_arrow_down_gray" />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cl_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                app:cardCornerRadius="@dimen/dp_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/label_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总销售额"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_sum"
                        style="@style/card_content_blue"
                        android:layout_marginTop="@dimen/dp_8"
                        android:textSize="@dimen/sp_32"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/label_sum"
                        tools:text="5000.00" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_7"
                        android:text="元"
                        android:textColor="@color/color_grey_999999"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_sum"
                        app:layout_constraintStart_toEndOf="@+id/tv_sum" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/label_sum_last_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="同比上年"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_sum" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_sum_arrow"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginStart="@dimen/dp_4"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_arrow_red_up"
                        app:layout_constraintBottom_toBottomOf="@+id/label_sum_last_year"
                        app:layout_constraintStart_toEndOf="@+id/label_sum_last_year"
                        app:layout_constraintTop_toTopOf="@+id/label_sum_last_year" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_sum_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:text="15%"
                        android:textColor="@color/color_red_F04864"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_sum_arrow"
                        app:layout_constraintStart_toEndOf="@+id/iv_sum_arrow"
                        app:layout_constraintTop_toTopOf="@+id/iv_sum_arrow" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cl_actual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                app:cardCornerRadius="@dimen/dp_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_sum">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/label_actual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实际回款"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_actual"
                        style="@style/card_content_blue"
                        android:layout_marginTop="@dimen/dp_8"
                        android:textSize="@dimen/sp_32"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/label_actual"
                        tools:text="5000.00" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_7"
                        android:text="元"
                        android:textColor="@color/color_grey_999999"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_actual"
                        app:layout_constraintStart_toEndOf="@+id/tv_actual" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/label_actual_last_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="同比上年"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_actual" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_actual_arrow"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginStart="@dimen/dp_4"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_arrow_green_down"
                        app:layout_constraintBottom_toBottomOf="@+id/label_actual_last_year"
                        app:layout_constraintStart_toEndOf="@+id/label_actual_last_year"
                        app:layout_constraintTop_toTopOf="@+id/label_actual_last_year" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_actual_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:text="15%"
                        android:textColor="@color/color_green_2fc25b"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_actual_arrow"
                        app:layout_constraintStart_toEndOf="@+id/iv_actual_arrow"
                        app:layout_constraintTop_toTopOf="@+id/iv_actual_arrow" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_marginTop="2.5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_arrow_gray_right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cl_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                app:cardCornerRadius="@dimen/dp_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_actual">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/label_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总成本"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_total"
                        style="@style/card_content_blue"
                        android:layout_marginTop="@dimen/dp_8"
                        android:textSize="@dimen/sp_32"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/label_total"
                        tools:text="5000.00" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_7"
                        android:text="元"
                        android:textColor="@color/color_grey_999999"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_total"
                        app:layout_constraintStart_toEndOf="@+id/tv_total" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/label_total_last_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="同比上年"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_total" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_total_arrow"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginStart="@dimen/dp_4"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_arrow_red_up"
                        app:layout_constraintBottom_toBottomOf="@+id/label_total_last_year"
                        app:layout_constraintStart_toEndOf="@+id/label_total_last_year"
                        app:layout_constraintTop_toTopOf="@+id/label_total_last_year" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_total_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:text="15%"
                        android:textColor="@color/color_red_F04864"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_total_arrow"
                        app:layout_constraintStart_toEndOf="@+id/iv_total_arrow"
                        app:layout_constraintTop_toTopOf="@+id/iv_total_arrow" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_marginTop="2.5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_arrow_gray_right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/label_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:gravity="center_vertical"
                android:text="收益统计表"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_total" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/assess_lc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_212p5"
                android:layout_marginTop="@dimen/dp_14p5"
                android:layout_marginBottom="@dimen/dp_24"
                android:background="@color/color_green_D4FFF1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_chart" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
