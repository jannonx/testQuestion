<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="assessListContentBean"
            type="com.guyuan.dear.focus.assess.data.bean.AssessListBean.ContentBean" />
    </data>

    <androidx.cardview.widget.CardView style="@style/CardViewNoElevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/assess_title_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/custom_title_tv"
                    style="@style/TextBigBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:rightContent="@{assessListContentBean.customerName}"
                    tools:text="深圳固远" />

                <TextView
                    android:id="@+id/custom_status_tv"
                    style="@style/TextTagBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="@dimen/dp_12"
                    app:assessStatus="@{assessListContentBean.status}"
                    tools:text="不通过" />
            </LinearLayout>


            <TextView
                android:id="@+id/contract_title_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="合同编号："
                app:layout_constraintStart_toStartOf="@+id/assess_title_ll"
                app:layout_constraintTop_toBottomOf="@+id/assess_title_ll" />

            <TextView
                android:id="@+id/contract_number_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/contract_title_tv"
                app:layout_constraintTop_toTopOf="@+id/contract_title_tv"
                app:rightContent="@{assessListContentBean.contractNumber}"
                tools:text="2312312" />

            <TextView
                android:id="@+id/assess_person_title"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="主持人："
                app:layout_constraintStart_toStartOf="@+id/contract_title_tv"
                app:layout_constraintTop_toBottomOf="@+id/contract_title_tv" />

            <TextView
                android:id="@+id/assess_person_tv"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ assessListContentBean.compereName}"
                app:layout_constraintStart_toEndOf="@+id/assess_person_title"
                app:layout_constraintTop_toTopOf="@+id/assess_person_title"
                tools:text="张三" />

            <TextView
                android:id="@+id/assess_time_tv"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                app:assessEndTime="@{assessListContentBean.auditEndTime}"
                app:assessStartTime="@{assessListContentBean.auditStartTime}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/assess_room_title_tv"
                tools:text="2012-11-21" />

            <TextView
                android:id="@+id/assess_room_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/assess_room_title_tv"
                app:layout_constraintTop_toTopOf="@+id/assess_room_title_tv"
                app:rightContent="@{assessListContentBean.meetingName}"
                tools:text="2号" />

            <TextView
                android:id="@+id/assess_room_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="会议室："
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/assess_person_title"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <View
                android:id="@+id/view"
                style="@style/DivideLine"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/assess_person_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
