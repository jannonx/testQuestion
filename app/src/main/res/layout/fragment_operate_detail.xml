<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            app:layout_scrollFlags="scroll|enterAlways">


            <TextView
                android:id="@+id/label_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目名称："
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空分机项目"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="@+id/label_project_name"
                app:layout_constraintStart_toEndOf="@+id/label_project_name"
                app:layout_constraintTop_toTopOf="@+id/label_project_name" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="100000.00"
                android:textColor="@color/color_blue_1890ff"
                android:textSize="@dimen/sp_32"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_project_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_7"
                android:text="万元"
                android:textColor="@color/color_grey_999999"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="@+id/tv_money"
                app:layout_constraintStart_toEndOf="@+id/tv_money" />


            <TextView
                android:id="@+id/label_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="客户名称："
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="@+id/tv_money"
                app:layout_constraintTop_toBottomOf="@+id/tv_money" />

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="固远深圳"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="@+id/label_customer_name"
                app:layout_constraintStart_toEndOf="@+id/label_customer_name"
                app:layout_constraintTop_toTopOf="@+id/label_customer_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@color/color_grey_eeeeee" />

        <tl.com.easy_recycleview_library.BaseRecyclerView
            android:id="@+id/base_recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@color/color_green_D4FFF1" />
    </LinearLayout>
</layout>