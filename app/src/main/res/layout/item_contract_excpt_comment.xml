<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.guyuan.dear.focus.contract.bean.ContractExcptComment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="0dp"
            android:background="#EEEEEE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/item_contract_excpt_comment_view_anchor_1"
            app:layout_constraintRight_toRightOf="@id/item_contract_excpt_comment_view_anchor_1"
            app:layout_constraintTop_toTopOf="@id/item_contract_excpt_comment_view_anchor_1" />

        <View
            android:id="@+id/item_contract_excpt_comment_link_line_top"
            android:layout_width="@dimen/dp_1"
            android:layout_height="0dp"
            android:background="#EEEEEE"
            app:layout_constraintBottom_toTopOf="@id/item_contract_excpt_comment_view_anchor_1"
            app:layout_constraintLeft_toLeftOf="@id/item_contract_excpt_comment_view_anchor_1"
            app:layout_constraintRight_toRightOf="@id/item_contract_excpt_comment_view_anchor_1"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_contract_excpt_comment_view_anchor_1"
            android:layout_width="8.5dp"
            android:layout_height="8.5dp"
            android:layout_marginLeft="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="@id/item_contract_excpt_comment_tv_approve_result"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setContractExcptDetailApproveResultColor="@{data.result}"
            app:srcCompat="@drawable/ic_svg_round_filled_green_2fc25b_24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_contract_excpt_comment_tv_approve_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="审批结果"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/item_contract_excpt_comment_view_anchor_1"
            app:layout_constraintTop_toTopOf="parent"
            app:setContractExcptDetailApproval="@{data.result}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_contract_excpt_comment_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="日期"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="@id/item_contract_excpt_comment_tv_approve_result"
            app:layout_constraintTop_toBottomOf="@id/item_contract_excpt_comment_tv_approve_result"
            app:setContractDate="@{data.date}" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_contract_excpt_comment_iv_avatar"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="@id/item_contract_excpt_comment_tv_date"
            app:layout_constraintTop_toBottomOf="@id/item_contract_excpt_comment_tv_date"
            app:srcCompat="@drawable/ic_svg_staff_icon_default" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_contract_excpt_comment_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="@dimen/dp_2"
            android:text="@{data.name}"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toRightOf="@id/item_contract_excpt_comment_iv_avatar"
            app:layout_constraintTop_toTopOf="@id/item_contract_excpt_comment_iv_avatar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_contract_excpt_comment_tv_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_12"
            android:text="@{data.comment}"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toLeftOf="@id/item_contract_excpt_comment_tv_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_contract_excpt_comment_tv_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_contract_excpt_comment_view_anchor_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_12"
            android:text="来自部门："
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/item_contract_excpt_comment_tv_comment"
            app:layout_constraintTop_toBottomOf="@id/item_contract_excpt_comment_tv_comment" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.dept}"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBaseline_toBaselineOf="@id/item_contract_excpt_comment_view_anchor_2"
            app:layout_constraintLeft_toRightOf="@id/item_contract_excpt_comment_view_anchor_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>