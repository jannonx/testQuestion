<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@drawable/bg_white_corner_top_8"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_8"
        tools:background="@color/gray_light">


        <FrameLayout
            android:id="@+id/layout_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12">

            <include layout="@layout/search_bar_button" />
        </FrameLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_title"
            style="@style/tv_approve_text_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/layout_search"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_12"
            android:gravity="center"
            android:text="点选主订单编号，或搜索主订单编号"
            android:textSize="@dimen/sp_12" />


        <!--    <tl.com.easy_recycleview_library.BaseRecyclerView-->
        <!--        android:id="@+id/recycler_view"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="match_parent"-->
        <!--        android:layout_below="@+id/label_title"-->
        <!--        android:layout_above="@+id/rl_footer"-->
        <!--        android:layout_marginStart="@dimen/dp_12"-->
        <!--        android:layout_marginBottom="@dimen/dp_5"-->
        <!--        android:layout_marginEnd="@dimen/dp_12" />-->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_footer"
            android:layout_below="@+id/label_title"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.guyuan.dear.customizeview.flowlayout.TagFlowLayout
                    android:id="@+id/tfl_tb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_12"

                    />
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


        <RelativeLayout
            android:id="@+id/rl_footer"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white_ffffff">

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0p5"
                android:layout_alignParentTop="true"
                android:background="@color/color_grey_cbcbcb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_12">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:layout_weight="1"
                    android:background="@drawable/bg_gray_f5f5f5_round"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/color_black_333333" />

                <TextView
                    android:id="@+id/tv_ok"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue_1677ff_round"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/color_white_ffffff" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>


</layout>