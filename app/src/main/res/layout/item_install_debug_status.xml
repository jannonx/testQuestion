<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_12"

        tools:background="@color/color_grey_eeeeee">

        <View
            android:id="@+id/v_line_above"
            android:layout_width="@dimen/dp_0p5"
            android:layout_height="0dp"
            android:background="@color/color_grey_eeeeee"

            app:layout_constraintBottom_toTopOf="@+id/view_ball"
            app:layout_constraintEnd_toEndOf="@+id/view_ball"
            app:layout_constraintStart_toStartOf="@+id/view_ball"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_ball"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:background="@drawable/bg_green_2fc25b_round"
            app:layout_constraintBottom_toBottomOf="@+id/tv_product_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_product_status" />

        <View
            android:id="@+id/v_line_below"
            android:layout_width="@dimen/dp_0p5"
            android:layout_height="0dp"
            android:background="@color/color_grey_eeeeee"
            app:layout_constraintBottom_toBottomOf="@+id/view_bottom"
            app:layout_constraintEnd_toEndOf="@+id/view_ball"
            app:layout_constraintStart_toStartOf="@+id/view_ball"
            app:layout_constraintTop_toBottomOf="@+id/view_ball" />

        <TextView
            android:id="@+id/tv_product_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/view_ball"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="生产完成" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="@+id/tv_product_status"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_status"
            tools:text="2020-09-03 18:53" />

        <com.guyuan.dear.customizeview.roundedimageview.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_16"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:corner_radius="1000dp"
            app:layout_constraintStart_toStartOf="@+id/tv_product_status"
            app:layout_constraintTop_toBottomOf="@+id/tv_time" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_2"
            android:text="葛蕊山"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar"
            app:layout_constraintTop_toTopOf="@+id/iv_avatar" />


        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:text="深圳市南山区西湖大道3046号香江金融中心大厦1708室" />


        <TextView
            android:id="@+id/label_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="来自部门："
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_comment" />

        <TextView
            android:id="@+id/tv_department"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_department"
            app:layout_constraintTop_toTopOf="@+id/label_department"
            tools:text="销售部销售部销售部销售部销售部销售部销售部" />

        <View
            android:id="@+id/view_bottom"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_department" />

        <com.guyuan.dear.customizeview.flowlayout.TagFlowLayout
            android:id="@+id/tfl_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/view_bottom"
            tools:background="@color/color_green_00B578"
            tools:layout_height="@dimen/dp_120" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_empty_bottom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_75"
        android:background="@color/transparent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_bottom"
        tools:background="@color/color_green_D4FFF1"
        tools:visibility="visible" />
</androidx.appcompat.widget.LinearLayoutCompat>



